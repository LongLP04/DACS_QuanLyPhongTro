@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager




<div class="btn-group">
    <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">
        <i class="fas fa-user"></i> Tài khoản
    </button>
    <div class="dropdown-menu dropdown-menu-right">
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                Xin chào, @UserManager.GetUserName(User)
            </a>
            <form class="dropdown-item p-0" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button type="submit" class="btn btn-link text-left w-100">Đăng xuất</button>
            </form>
        }
        else
        {
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        }
    </div>
</div>
<style>
    .dropdown-menu {
        position: absolute; /* Đảm bảo dropdown hiển thị đúng vị trí */
        z-index: 3000 !important; /* Đặt z-index cao để nổi trên navbar */
        background-color: #fff; /* Nền trắng để dễ nhìn */
        box-shadow: 0 4px 8px rgba(0,0,0,0.15); /* Bóng mờ tạo nổi bật */
        border-radius: 8px; /* Bo tròn các góc */
        min-width: 10rem; /* Chiều rộng tối thiểu */
    }

    /* Nếu dropdown nằm bên phải, căn chỉnh đúng */
    .dropdown-menu-right {
        right: 0;
        left: auto;
    }

</style>