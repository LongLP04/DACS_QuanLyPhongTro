@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Identity
@using DACS_QuanLyPhongTro.Models

@* @inject IHttpContextAccessor HttpContextAccessor  *@
@* @inject SignInManager<IdentityUser> SignInManager  *@
@* @inject UserManager<ApplicationUser> UserManager *@


@inject DACS_QuanLyPhongTro.Services.IUserService userService
@inject ApplicationDbContext _context
<!DOCTYPE html>

<html>
<head>
    <me  name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">

    @* @{ *@
    @*     var isAuthenticated = HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated; *@
    @* } *@
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="images/images.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css?v=127" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

</head>
<body>

    <div class="main-content" style="background-image: url('@Url.Content("~/images/backMoi.jpg")') !important; background-size: cover; background-position: center; background-repeat: no-repeat; position: relative; min-height: 100vh;">
        <!-- Topbar Start -->
        <div class="container-fluid">

            <div class="row align-items-center py-0 px-xl-5 d-none d-lg-flex">
                <div class="col-lg-4">
                    <a href="/" class="text-decoration-none d-block w-100">
                        <img src="/images/mainlogo3.png" alt="Logo Trọ quanh ta"
                             class="img-fluid logo-animate"
                             style="max-width: 100%; height: auto; transition: transform 0.3s ease;"
                             onmouseover="this.style.transform='scale(1.05)'"
                             onmouseout="this.style.transform='scale(1)'">
                    </a>
                </div>

                <style>
                    .modal {
                        z-index: 11000 !important;
                    }

                    .modal-backdrop {
                        z-index: 10900 !important;
                    @@keyframes logoBounce {
                        0%

                    {
                        transform: scale(1);
                        opacity: 0;
                    }

                    50% {
                        transform: scale(1.1);
                        opacity: 1;
                    }

                    100% {
                        transform: scale(1);
                        opacity: 1;
                    }

                    }

                    .logo-animate {
                        animation: logoBounce 1s ease forwards;
                        /* animation chỉ chạy 1 lần khi load */
                    }
                </style>

                <div class="col-lg-4 col-6 text-left">
                    <form asp-controller="Phongtro" asp-action="Index" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control search-input" name="searchTerm" placeholder="Tìm kiếm trọ theo tên đường/quận/thành phố,.." value="@Context.Request.Query["searchTerm"]">
                            <div class="input-group-append">
                                <button class="btn search-button" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>

                        <style>
                            .search-input {
                                border-color: #e67e22 !important; /* Viền cam đậm */
                                background-color: #fff; /* Nền trắng để dễ đọc */
                                color: #333; /* Chữ tối để tương phản */
                            }

                                .search-input:focus {
                                    border-color: #d35400 !important; /* Viền đậm hơn khi focus */
                                    box-shadow: 0 0 0 0.2rem rgba(230, 126, 34, 0.25); /* Hiệu ứng focus */
                                    background-color: #fff;
                                    color: #333;
                                }

                            .search-button {
                                background-color: #e67e22 !important; /* Nền cam đậm */
                                border-color: #e67e22 !important; /* Viền cam đậm */
                                color: white !important; /* Chữ/icon trắng */
                            }

                                .search-button:hover {
                                    background-color: #d35400 !important; /* Cam đậm hơn khi hover */
                                    border-color: #d35400 !important;
                                    color: white !important;
                                }
                        </style>
                    </form>
                </div>
                <div class="col-lg-4 col-6 text-right">
                    <div class="btn-group" style="margin-right : 50px">
                        <partial name="_LoginPartial" />
                    </div>   
                    <a href="#footer" class="btn btn-success back-to-contact" style="background-color: #e67e22; border-color: #e67e22;">Liên hệ</a>
                </div>
            </div>

        </div>
        <!-- Topbar End -->
        <!-- Navbar Start -->
        <div class="container-fluid p-0 mb-0" style="background-color: #f39c12; border-radius: 0 0 15px 15px; box-shadow: 0 4px 15px rgba(243, 156, 18, 0.5);">
            <div class="row px-xl-5">
                <div class="col-lg-3 d-none d-lg-block position-relative" style="z-index: 1050;">
                    <a class="btn d-flex align-items-center justify-content-between w-100"
                       data-toggle="collapse" href="#navbar-vertical"
                       style="background-color: #f39c12; color: white; height: 65px; padding: 0 30px; transition: all 0.3s ease; border-radius: 10px 10px 0 0; box-shadow: 0 4px 8px rgba(0,0,0,0.2); cursor: pointer;">
                        <h6 class="m-0 animate__animated animate__fadeIn d-flex align-items-center" style="color: #0b2047; font-weight: 700;">
                            <i class="fa fa-bars mr-3" style="font-size: 1.3rem; text-shadow: 0 0 5px rgba(0,0,0,0.7);"></i>
                            Truy cập nhanh các chức năng
                        </h6>
                        <i class="fa fa-angle-down"
                           style="color: white; transition: transform 0.3s ease; font-size: 1.5rem; text-shadow: 0 0 5px rgba(0,0,0,0.7);"></i>
                    </a>

                    <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-3 bg-white rounded shadow-sm" id="navbar-vertical" style="width: calc(100% - 30px); top: 65px; left: 15px; z-index: 999; transition: opacity 0.3s ease;">
                        <div class="navbar-nav w-100">
                            <a asp-controller="Phongtro" asp-action="Index" class="nav-item nav-link px-3 py-2 rounded" style="transition: all 0.3s ease;">Tất cả phòng trọ</a>
                            <a asp-controller="Notifications" asp-action="Index" asp-route-categoryId="1" class="nav-item nav-link px-3 py-2 rounded" style="transition: all 0.3s ease;">Thông báo lịch hẹn</a>
                            <a asp-controller="PhieuThanhToan" asp-action="Index" asp-route-categoryId="2" class="nav-item nav-link px-3 py-2 rounded" style="transition: all 0.3s ease;">Thanh toán hóa đơn</a>
                            <a asp-controller="Phongtrocuatoi" asp-action="Index" asp-route-categoryId="3" class="nav-item nav-link px-3 py-2 rounded" style="transition: all 0.3s ease;">Phòng trọ của tôi</a>
                            <a asp-controller="Shop" asp-action="Index" asp-route-categoryId="4" class="nav-item nav-link px-3 py-2 rounded" style="transition: all 0.3s ease;">Liên hệ</a>
                        </div>
                    </nav>
                </div>

                <div class="col-lg-9 position-relative" style="z-index: 1050;">
                    <nav class="navbar navbar-expand-lg navbar-dark py-3 py-lg-0 px-0 rounded" style="background-color: #f39c12; transition: all 0.3s ease;">
                        <a href="/" class="text-decoration-none d-block w-100 d-lg-none">
                            <img src="/images/mainlogo3.png" alt="Logo Trọ quanh ta"
                                 class="img-fluid"
                                 style="max-width: 70%; height: auto; transition: transform 0.3s ease;"
                                 onmouseover="this.style.transform='scale(1.05)'"
                                 onmouseout="this.style.transform='scale(1)'">
                        </a>
                        <button type="button" class="navbar-toggler border-0" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation" style="transition: all 0.3s ease; box-shadow: 0 2px 8px rgba(0,0,0,0.15); border-radius: 50%;">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        @{
                            var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                            bool hasRental = false;
                            if (User.Identity.IsAuthenticated && userId != null)
                            {
                                hasRental = await userService.HasActiveRentalAsync(userId);
                            }
                        }

                        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse" style="transition: opacity 0.3s ease;">
                            <ul class="navbar-nav mr-auto font-weight-bold">
                                <li class="nav-item mx-2">
                                    <a asp-controller="Home" asp-action="Index" class="nav-link px-3 py-2 rounded">
                                        <i class="fas fa-home mr-2"></i> Trang chủ
                                    </a>
                                </li>
                                <li class="nav-item mx-2">
                                    <a asp-controller="PhongTro" asp-action="Index" class="nav-link px-3 py-2 rounded">
                                        <i class="fas fa-building mr-2"></i> Phòng trọ
                                    </a>
                                </li>
                                
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item mx-2">
                                        <span class="nav-link fst-italic text-white">
                                            Hãy
                                            <a asp-area="Identity" asp-page="/Account/Register" class="text-light font-weight-bold">
                                                <i class="fas fa-user-plus mr-1"></i> đăng ký
                                            </a>
                                            /
                                            <a asp-area="Identity" asp-page="/Account/Login" class="text-light font-weight-bold">
                                                <i class="fas fa-sign-in-alt mr-1"></i> đăng nhập
                                            </a> để xem các tiện ích khác
                                        </span>
                                    </li>
                                }
								else if (!hasRental)
								{
                                    <li class="nav-item mx-2">
                                        <a asp-controller="Notifications" asp-action="Index" asp-route-categoryId="1" class="nav-link px-3 py-2 rounded" style="transition: all 0.3s ease;">
                                            <i class="fas fa-bell mr-2"></i> Thông báo lịch hẹn
                                        </a>
                                    </li>

                                    <li class="nav-item mx-2">
                                        <a asp-controller="HopDong" asp-action="XacNhan" class="nav-link px-3 py-2 rounded" style="transition: all 0.3s ease;">
                                            <i class="fas fa-file-signature mr-2"></i> Xác nhận hợp đồng
                                        </a>
                                    </li>
								}
                                else if (hasRental)
                                {
                                    <li class="nav-item mx-2">
                                        <a asp-controller="Notifications" asp-action="Index" asp-route-categoryId="1" class="nav-link px-3 py-2 rounded" style="transition: all 0.3s ease;">
                                            <i class="fas fa-bell mr-2"></i> Thông báo lịch hẹn
                                        </a>
                                    </li>

                                    <li class="nav-item mx-2">
                                        <a asp-controller="HopDong" asp-action="XacNhan" class="nav-link px-3 py-2 rounded" style="transition: all 0.3s ease;">
                                            <i class="fas fa-file-signature mr-2"></i> Xác nhận hợp đồng
                                        </a>
                                    </li>
                                    <li class="nav-item mx-2">
                                        <a asp-controller="Phongtrocuatoi" asp-action="Index" class="nav-link px-3 py-2 rounded">
                                            <i class="fas fa-door-open mr-2"></i> Phòng trọ của tôi
                                        </a>
                                    </li>
                                }
                            </ul>

                        </div>
                    </nav>
                </div>
            </div>
        </div>

        <style>
        /* --- Nút Liên hệ ban đầu --- */
        .back-to-contact {
            margin-top: 5px;
            position: fixed;
            right: 30px;
            top: 15px;
            z-index: 11;
            background-color: #e67e22;
            border-color: #e67e22;
            color: #fff;
            font-weight: 600;
            padding: 10px 15px;
            font-size: 14px;
            border-radius: 8px;
            transition: all 0.5s ease;
            }

            /* Khi cuộn xuống: di chuyển sang góc trái, bật hiệu ứng nhảy */
            .back-to-contact.fixed {
            top: auto;
            bottom: 25px;
            left: 90px;   /* nằm gần nút back-to-top */
            right: auto;
            border-radius: 25px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.25);
            animation: action 1.5s infinite alternate;
            }

        .back-to-contact.fixed:hover {
            transform: scale(1.1);
            background-color: #cf6a11 !important;
        }

            .back-to-top {
                position: fixed;
                bottom: 25px;   /* cách đáy 25px */
                left: 25px;     /* chuyển qua bên trái */
                right: auto;    /* tắt cố định bên phải */
                z-index: 9999;
                background-color: #28a745; /* màu xanh lá như btn-success */
                color: white;
                border-radius: 50%;
                width: 50px;
                height: 50px;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: transform 0.3s ease;
            }

            .back-to-top:hover {
                transform: scale(1.1);
            }

            /* Tổng quan navbar */
            .navbar {
                border-radius: 12px;
                box-shadow: 0 4px 15px rgba(243, 156, 18, 0.45);
            }

            /* Nav link chung */
            .nav-link {
                color: #0b2047 !important; /* Màu chữ đổi sang #0b2047 */
                font-weight: 600;
                font-size: 1rem;
                transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
                padding-top: 0.3rem !important;
                padding-bottom: 0.3rem !important;
                line-height: 1.2;
                height: 100%;
                display: flex;
                align-items: center;
            }

                /* Hover nav link */
                .nav-link:hover, .nav-link:focus {
                    background-color: #d18b00 !important;
                    color: white !important;
                    box-shadow: 0 6px 15px rgba(209, 139, 0, 0.7);
                    transform: scale(1.05);
                    border-radius: 12px;
                }

            /* Navbar toggler button */
            .navbar-toggler {
                background-color: #d18b00;
                border-radius: 50%;
                transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
                box-shadow: 0 2px 10px rgba(209, 139, 0, 0.6);
            }

                .navbar-toggler:hover {
                    background-color: #a97000;
                    transform: scale(1.15);
                    box-shadow: 0 6px 20px rgba(169, 112, 0, 0.8);
                }

            /* Vertical navbar menu */
            #navbar-vertical {
                border-radius: 0 0 12px 12px;
            }

                #navbar-vertical .nav-link {
                    color: #333 !important;
                    font-weight: 500;
                    transition: background-color 0.3s ease, color 0.3s ease;
                }

                    #navbar-vertical .nav-link:hover {
                        background-color: #f3c24b !important;
                        color: #1a1a1a !important;
                    }

                /* Hide vertical navbar opacity transition fix */
                #navbar-vertical.collapsing {
                    opacity: 0;
                }

                #navbar-vertical.show {
                    opacity: 1;
                }

            /* Căn chỉnh dọc nav item */
            .navbar-nav .nav-item {
                display: flex;
                align-items: center;
                height: 65px;
            }
            /* Hiệu ứng xoay icon mũi tên */
            .fa-angle-down.rotated {
                transform: rotate(180deg);
                transition: transform 0.3s ease;
            }

            /* Hiệu ứng nhấn khi hover */
            a.btn:hover {
                background-color: #d18b00 !important;
                box-shadow: 0 6px 15px rgba(209, 139, 0, 0.7);
                transform: scale(1.05);
                border-radius: 10px 10px 0 0;
            }
        </style>

        @RenderBody()

        @await Html.PartialAsync("_Footer")
    </div>
    <!-- Back to Top -->

    <a href="#" class="btn btn-success  back-to-top"><i class="fa fa-angle-double-up" ></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->

    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)  <!-- Thêm dòng này vào đây -->
</body>
</html>
<script>
    // Thêm hiệu ứng xoay icon mũi tên khi mở/đóng collapse
    $(document).ready(function () {
        $('[data-toggle="collapse"]').on('click', function () {
            var icon = $(this).find('.fa-angle-down');
            icon.toggleClass('rotated');
        });
    });
    window.addEventListener('scroll', function() {
    const contactBtn = document.querySelector('.back-to-contact');
    const scrollPos = window.scrollY;

    if (scrollPos > 10) { // khi cuộn xuống hơn 300px
        contactBtn.classList.add('fixed');
    } else {
        contactBtn.classList.remove('fixed');
    }
});
</script>