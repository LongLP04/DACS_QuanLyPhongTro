@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Identity
@using DACS_QuanLyPhongTro.Models

@* @inject IHttpContextAccessor HttpContextAccessor  *@
@* @inject SignInManager<IdentityUser> SignInManager  *@
@* @inject UserManager<ApplicationUser> UserManager *@
@inject ApplicationDbContext _context
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">

    @* @{ *@
    @*     var isAuthenticated = HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated; *@
    @* } *@
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="images/images.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css?v=127" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

</head>
<body>

    <div class="main-content" style="background-image: url('images/backMoi.jpg') !important; background-size: cover; background-position: center; background-repeat: no-repeat; position: relative; min-height: 100vh;">
        <!-- Topbar Start -->
        <div class="container-fluid">

            <div class="row align-items-center py-0 px-xl-5 d-none d-lg-flex">
                <div class="col-lg-4">
                    <a href="/" class="text-decoration-none d-block w-100">
                        <img src="/images/mainlogo2.png" alt="Logo Trọ quanh ta"
                             class="img-fluid"
                             style="max-width: 100%; height: auto; transition: transform 0.3s ease;"
                             onmouseover="this.style.transform='scale(1.05)'"
                             onmouseout="this.style.transform='scale(1)'">
                    </a>



                </div>
                <div class="col-lg-4 col-6 text-left">
                    <form asp-controller="Phongtro" asp-action="Index" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control search-input" name="searchTerm" placeholder="Tìm kiếm sản phẩm..." value="@Context.Request.Query["searchTerm"]">
                            <div class="input-group-append">
                                <button class="btn search-button" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>

                        <style>
                            .search-input {
                                border-color: #e67e22 !important; /* Viền cam đậm */
                                background-color: #fff; /* Nền trắng để dễ đọc */
                                color: #333; /* Chữ tối để tương phản */
                            }

                                .search-input:focus {
                                    border-color: #d35400 !important; /* Viền đậm hơn khi focus */
                                    box-shadow: 0 0 0 0.2rem rgba(230, 126, 34, 0.25); /* Hiệu ứng focus */
                                    background-color: #fff;
                                    color: #333;
                                }

                            .search-button {
                                background-color: #e67e22 !important; /* Nền cam đậm */
                                border-color: #e67e22 !important; /* Viền cam đậm */
                                color: white !important; /* Chữ/icon trắng */
                            }

                                .search-button:hover {
                                    background-color: #d35400 !important; /* Cam đậm hơn khi hover */
                                    border-color: #d35400 !important;
                                    color: white !important;
                                }
                        </style>
                    </form>
                </div>
                <div class="col-lg-4 col-6 text-right">
                    <div class="btn-group" style="margin-right : 50px">
                        <partial name="_LoginPartial" />
                    </div>   
                    <a href="#footer" class="btn btn-success back-to-contact" style="background-color: #e67e22; border-color: #e67e22;">Liên hệ</a>
                </div>
            </div>

        </div>
        <!-- Topbar End -->
        <!-- Navbar Start -->
        <div class="container-fluid p-0 mb-0" style="background-color: #f39c12;" ">
            <div class="row px-xl-5">
                <div class="col-lg-3 d-none d-lg-block" style="position: relative; z-index: 2;">
                    <a class="btn d-flex align-items-center justify-content-between w-100"
                       data-toggle="collapse" href="#navbar-vertical"
                       style="background-color: #f39c12; color: white; height: 65px; padding: 0 30px; transition: all 0.1s ease;">
                        <h6 class="m-0 animate__animated animate__fadeIn" style="color: white;">
                            <i class="fa fa-bars mr-2"></i>Truy cập nhanh các chức năng
                        </h6>
                        <i class="fa fa-angle-down" style="color: white;"></i>
                    </a>

                    <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999; transition: opacity 0.3s ease;">
                        <div class="navbar-nav w-100">
                            <a asp-controller="Phongtro" asp-action="Index" class="nav-item nav-link" style="transition: all 0.3s ease;">Tất cả phòng trọ</a>                           
                            <a asp-controller="Notifications" asp-action="Index" asp-route-categoryId="1" class="nav-item nav-link" style="transition: all 0.3s ease;">Thông báo lịch hẹn</a>
                            <a asp-controller="PhieuThanhToan" asp-action="Index" asp-route-categoryId="2" class="nav-item nav-link" style="transition: all 0.3s ease;">Thanh toán hóa đơn</a>
                            <a asp-controller="Phongtrocuatoi" asp-action="Index" asp-route-categoryId="3" class="nav-item nav-link" style="transition: all 0.3s ease;">Phòng trọ của tôi</a>
                            <a asp-controller="Shop" asp-action="Index" asp-route-categoryId="4" class="nav-item nav-link" style="transition: all 0.3s ease;">Liên hệ</a>
                        </div>
                    </nav>
                </div>

                <div class="col-lg-9" style="position: relative; z-index: 2;">
                    <nav class="navbar navbar-expand-lg navbar-dark py-3 py-lg-0 px-0" style="background-color: #f39c12; transition: all 0.3s ease;">
                        <a href="/" class="text-decoration-none d-block w-100 d-lg-none">
                            <img src="/images/mainlogo2.png"` alt="Logo Trọ quanh ta"
                                 class="img-fluid"
                                 style="max-width: 70%; height: auto; transition: transform 0.3s ease;"
                                 onmouseover="this.style.transform='scale(1.05)'"
                                 onmouseout="this.style.transform='scale(1)'">
                        </a>
                        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse" style="transition: all 0.3s ease;">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse" style="transition: opacity 0.3s ease;">
                            <div class="navbar-nav mr-auto py-0">
                                <a asp-controller="Home" asp-action="Index" class="nav-item nav-link" style="transition: all 0.3s ease;">Trang chủ</a>
                                <a asp-controller="PhongTro" asp-action="Index" class="nav-item nav-link" style="transition: all 0.3s ease;">Phòng trọ</a>

                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <span class="nav-item nav-link text-white fst-italic" style="transition: all 0.3s ease;">
                                        Hãy <a asp-area="Identity" asp-page="/Account/Register" style="transition: all 0.3s ease;">đăng ký</a> / <a asp-area="Identity" asp-page="/Account/Login" style="transition: all 0.3s ease;">đăng nhập</a> để xem các tiện ích khác
                                    </span>
                                }
                                else
                                {
                                    <a asp-controller="Notifications" asp-action="Index" class="nav-item nav-link" style="transition: all 0.3s ease;">Thông báo lịch hẹn</a>
                                    <a class="nav-item nav-link" href="/HopDong/XacNhan" style="transition: all 0.3s ease;">Xác nhận hợp đồng</a>
                                    <a asp-controller="Phongtrocuatoi" asp-action="Index" class="nav-item nav-link" style="transition: all 0.3s ease;">Phòng trọ của tôi</a>
                                    <a asp-controller="ChiSoDienNuoc" asp-action="Index" class="nav-item nav-link" style="transition: all 0.3s ease;">Xem chỉ số điện nước</a>
                                    <a asp-controller="PhieuThanhToan" asp-action="Index" class="nav-item nav-link" style="transition: all 0.3s ease;">Hóa đơn thanh toán</a>
                                }
                            </div>
                        </div>
                    </nav>
                </div>
            </div>

            <style>

                .nav-link:hover {
                    color: #ffcc00 !important;
                    transform: scale(1.05);
                    background-color: rgba(0, 0, 0, 0.2);
                }

                .dropdown-toggle:hover {
                    color: #ffcc00 !important;
                }

                #navbar-vertical.collapsing {
                    opacity: 0;
                }

                #navbar-vertical.show {
                    opacity: 1;
                }

                .animate__animated.animate__fadeIn {
                    animation-delay: 0.2s;
                }

                .navbar-toggler:hover {
                    transform: scale(1.1);
                }
            </style>
        </div>
        <!-- Navbar End -->
        @RenderBody()

        @await Html.PartialAsync("_Footer")
    </div>
    <!-- Back to Top -->

    <a href="#" class="btn btn-success  back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->

    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)  <!-- Thêm dòng này vào đây -->
</body>
</html>
