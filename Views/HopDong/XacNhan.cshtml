@model IEnumerable<DACS_QuanLyPhongTro.Models.HopDong>
@{
    ViewData["Title"] = "Xác Nhận Hợp Đồng";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Điều chỉnh layout nếu cần
}

<h2>Hợp đồng chờ xác nhận</h2>

@if (Model.Any())
{
    <ul>
        @foreach (var hopDong in Model)
        {
            <li>
                Hợp đồng mã: @hopDong.MaHopDong - Phòng: @hopDong.PhongTro.SoPhong - Trạng thái: @hopDong.TrangThai
                <form asp-controller="HopDong" asp-action="XacNhan" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="maHopDong" value="@hopDong.MaHopDong" />
                    <button type="submit" name="dongY" value="true" class="btn btn-success">Xác nhận</button>
                    <button type="submit" name="dongY" value="false" class="btn btn-danger">Từ chối</button>
                </form>

            </li>
        }
    </ul>
}
else
{
    <p>Không có hợp đồng chờ xác nhận.</p>
}
