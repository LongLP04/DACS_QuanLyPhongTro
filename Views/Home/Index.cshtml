<!-- Carousel Start -->
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#header-carousel" data-slide-to="1"></li>
                    <li data-target="#header-carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item position-relative active" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="img/posterGiay1.jpg" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Trẻ Trung</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Đôi giày thể thao với thiết kế năng động, giúp bạn tự tin sải bước mọi lúc mọi nơi. Chất liệu êm ái, thoáng khí mang đến sự thoải mái tối đa suốt cả ngày! 👟✨</p>
                                <a asp-controller="Shop" asp-action="Index" class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp">Shop Now</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="img/posterGiay2.jpg" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Năng Động</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Đôi giày thiết kế trẻ trung, linh hoạt, phù hợp cho những bước chân tràn đầy sức sống và nhiệt huyết. 👟⚡</p>
                                <a asp-controller="Shop" asp-action="Index" class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp">Shop Now</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="img/posterGiay3.png" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Sáng Tạo</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn"> Phá cách với kiểu dáng độc đáo, chất liệu hiện đại, mang đến phong cách mới lạ và đầy cá tính. 🎨🔥</p>
                                <a asp-controller="Shop" asp-action="Index" class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Giảm giá *@

        <div class="col-lg-4">
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="img/giamGia1.jpg" alt="Giảm giá 1">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Save 20%</h6>
                    <h3 class="text-white mb-3">Special Offer</h3>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">Shop Now</a>
                </div>
            </div>

            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="img/giamGia2.jpg" alt="Giảm giá 2">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Save 20%</h6>
                    <h3 class="text-white mb-3">Special Offer</h3>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
        </div>


    </div>
</div>
<!-- Carousel End -->
