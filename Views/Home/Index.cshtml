@{
    ViewData["Title"] = "Home Page";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Trọ quanh ta";
}
@if (TempData["ThongBao"] != null)
{
    <div class="alert alert-success" id="thongBao">
        @TempData["ThongBao"]
    </div>
}
<!-- Carousel Start -->
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#header-carousel" data-slide-to="1"></li>
                    <li data-target="#header-carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item position-relative active" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="images/poster_1.jpg" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Trẻ Trung</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Phòng trọ hiện đại, phù hợp với xu hướng giới trẻ✨</p>
                                <a asp-controller="PhongTro" asp-action="Index" class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp">Tham khảo ngay</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="images/poster_2.jpg" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Năng Động</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Phòng trọ có quy định giờ giấc và có thể linh hoạt xoay giờ theo nhu cầu khách thuê⚡</p>
                                <a asp-controller="PhongTro" asp-action="Index" class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp">Tham khảo ngay</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="images/poster.jpg" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Sáng Tạo</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn"> Phá cách với sự sáng tạo và mang phong cách của riêng bạn🎨🔥</p>
                                <a asp-controller="PhongTro" asp-action="Index" class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp">Tham khảo ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Giảm giá *@

        <div class="col-lg-4">
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="images/tro_5.jpg" alt="Giảm giá 1">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Save 20%</h6>
                    <h3 class="text-white mb-3">Special Offer</h3>
                    <a asp-controller="PhongTro" asp-action="Index" class="btn btn-primary">Tham khảo ngay</a>
                </div>
            </div>

            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="images/tro_7.jpg" alt="Giảm giá 2">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Save 20%</h6>
                    <h3 class="text-white mb-3">Special Offer</h3>
                    <a asp-controller="PhongTro" asp-action="Index" class="btn btn-primary">Tham khảo ngay</a>
                </div>
            </div>
        </div>


    </div>
</div>
<!-- Carousel End -->
<!-- Tiêu chí Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                <i class="fas fa-home text-primary fa-2x mr-3"></i>
                <h5 class="font-weight-semi-bold m-0">Phòng trọ chất lượng</h5>
