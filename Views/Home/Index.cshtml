                                <a asp-controller="PhongTro" asp-action="Index" class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp">Tham khảo ngay</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="images/poster.jpg" style="object-fit: cover; top: 0; left: 0; margin: 0; padding: 0;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Sáng Tạo</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Phá cách với sự sáng tạo và mang phong cách của riêng bạn🎨🔥</p>
                                <a asp-controller="PhongTro" asp-action="Index" class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp">Tham khảo ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Giảm giá *@
        <div class="col-lg-4" style="padding: 0; margin: 0;">
            <div class="product-offer mb-0" style="height: 215px; position: relative; overflow: hidden;">
                <img class="img-fluid w-100 h-100" src="images/tro_5.jpg" alt="Giảm giá 1" style="object-fit: cover; position: absolute; top: 0; left: 0; margin: 0; padding: 0;">
                <div class="offer-text" style="position: relative; z-index: 1; width: 100%; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;">
                    <h6 class="text-white text-uppercase">Save 20%</h6>
                    <h3 class="text-white mb-3">Special Offer</h3>
                    <a asp-controller="PhongTro" asp-action="Index" class="btn btn-primary">Tham khảo ngay</a>
                </div>
            </div>
            <div class="product-offer mb-0" style="height: 215px; position: relative; overflow: hidden;">
                <img class="img-fluid w-100 h-100" src="images/tro_7.jpg" alt="Giảm giá 2" style="object-fit: cover; position: absolute; top: 0; left: 0; margin: 0; padding: 0;">
                <div class="offer-text" style="position: relative; z-index: 1; width: 100%; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;">
                    <h6 class="text-white text-uppercase">Save 20%</h6>
                    <h3 class="text-white mb-3">Special Offer</h3>
                    <a asp-controller="PhongTro" asp-action="Index" class="btn btn-primary">Tham khảo ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>
