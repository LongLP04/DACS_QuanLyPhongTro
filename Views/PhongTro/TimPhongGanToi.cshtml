@{
    ViewData["Title"] = "Tìm phòng trọ gần tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #a0522d;">Tìm phòng trọ gần tôi</h2>

<div style="max-width: 600px; margin: 0 auto 30px auto; display: flex; justify-content: center; gap: 15px; align-items: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <label for="distanceFilter" style="font-weight: 700; font-size: 1.1rem; color: #5a2ea6; user-select: none;">
        <i class="fas fa-route" style="color:#ff8a00; margin-right: 8px;"></i>
        Chọn khoảng cách tối đa (km):
    </label>

    <select id="distanceFilter" class="custom-distance-select">
        <option value="0" selected>Tất cả</option>
        <option value="1">1 km</option>
        <option value="3">3 km</option>
        <option value="5">5 km</option>
        <option value="10">10 km</option>
    </select>
</div>

<style>
    .custom-distance-select {
        max-width: 160px;
        padding: 10px 15px;
        font-size: 1rem;
        border: 2px solid #5a2ea6;
        border-radius: 30px;
        background: white url('data:image/svg+xml;utf8,<svg fill="%235a2ea6" height="20" viewBox="0 0 24 24" width="20" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/></svg>') no-repeat right 15px center;
        background-size: 16px;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        cursor: pointer;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        color: #5a2ea6;
    }

        .custom-distance-select:hover {
            border-color: #ff8a00;
            box-shadow: 0 0 8px #ff8a00;
        }

        .custom-distance-select:focus {
            outline: none;
            border-color: #e52e71;
            box-shadow: 0 0 10px #e52e71;
        }

    /* Remove default dropdown arrow for IE */
    select::-ms-expand {
        display: none;
    }
</style>
<div id="phongGanContainer" class="container mt-5" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px;">
    Đang tải phòng trọ gần bạn...
</div>


<style>
    /* Container các phòng trọ */
    #phongGanContainer {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px; /* Khoảng cách giữa các phòng trọ */
    }

    /* Phòng trọ item */
    .phong-item {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        background-color: #f9f9f9;
        width: 280px; /* Đặt chiều rộng cố định */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
        text-align: center;
    }

        .phong-item:hover {
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15); /* Hiệu ứng hover */
            transform: scale(1.05); /* Zoom nhẹ khi hover */
        }

        .phong-item h5 {
            margin-top: 0;
            margin-bottom: 10px;
            font-size: 1.2rem;
            font-weight: 600;
        }

        .phong-item p {
            margin-bottom: 10px;
            font-size: 1rem;
        }

    /* Link actions */
    .phong-actions {
        margin-top: 10px;
    }

        .phong-actions a {
            margin-right: 15px;
            text-decoration: none;
            color: #007bff;
            font-weight: 500;
        }

            .phong-actions a:hover {
                text-decoration: underline;
            }

    /* Cải tiến hiển thị thông tin phòng trọ */
    .btn-hover-effect {
        transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 50rem !important;
    }

        .btn-hover-effect:hover {
            background-color: #75c98e !important;
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 86, 179, 0.4);
        }

        .btn-hover-effect:active {
            transform: scale(0.95);
            box-shadow: 0 4px 8px rgba(0, 86, 179, 0.3);
        }
</style>

<script>
    function getUserLocationAndSearch() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function (position) {
                const lat = position.coords.latitude;
                const lng = position.coords.longitude;
                console.log("Vị trí hiện tại:", lat, lng);

                // Gọi hàm fetch với khoảng cách hiện tại
                fetchPhongGan(lat, lng);

                // Bắt sự kiện thay đổi dropdown khoảng cách
                document.getElementById("distanceFilter").addEventListener("change", function () {
                    fetchPhongGan(lat, lng);
                });

            }, function (error) {
                alert("Không thể lấy vị trí hiện tại: " + error.message);
            });
        } else {
            alert("Trình duyệt không hỗ trợ Geolocation.");
        }
    }

    function fetchPhongGan(lat, lng) {
        const maxDistance = document.getElementById("distanceFilter").value;
        // Xây dựng URL API, thêm param maxDistance nếu > 0
        let url = `/PhongTro/GetPhongGanToi?lat=${lat}&lng=${lng}`;
        if (maxDistance && maxDistance !== "0") {
            url += `&maxDistance=${maxDistance}`;
        }

        fetch(url)
            .then(response => response.json())
            .then(data => {
                renderPhongGan(data);
            })
            .catch(err => {
                alert("Lỗi khi lấy danh sách phòng trọ gần: " + err);
            });
    }

    function renderPhongGan(phongList) {
        const container = document.getElementById("phongGanContainer");
        container.innerHTML = "";
        if (!phongList || phongList.length === 0) {
            container.innerHTML = "<p style='text-align:center;'>Không tìm thấy phòng trọ gần vị trí của bạn.</p>";
            return;
        }

        phongList.forEach(p => {
            const div = document.createElement("div");
            div.classList.add("phong-item");
            div.innerHTML = `
                <h5>${p.soPhong} - ${p.tenToaNha}</h5>
                <p>Giá thuê: ${p.giaThue.toLocaleString('vi-VN')} VNĐ</p>
                <p>Địa chỉ: ${p.diaChi}</p>
                <p>Khoảng cách: ${p.distance.toFixed(2)} km</p>
                <div class="phong-actions">
                    <a href="https://www.google.com/maps?q=${p.viTri}" target="_blank" class="btn btn-info btn-sm btn-hover-effect">Xem bản đồ</a>
                    <a href="/PhongTro/Details/${p.maPhong}" class="btn btn-success btn-sm btn-hover-effect">Xem phòng</a>
                </div>
            `;
            container.appendChild(div);
        });
    }

    window.onload = function () {
        getUserLocationAndSearch();
    };
</script>

