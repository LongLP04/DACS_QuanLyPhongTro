@model List<DACS_QuanLyPhongTro.Models.PhieuHienTrangNhanPhong>

@{
    ViewData["Title"] = "Danh Sách Phiếu Hiện Trạng Nhận Phòng";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
    
    var totalRecords = Model?.Count() ?? 0;
    var thisMonthRecords = Model?.Count(p => p.NgayNhanPhong.Month == DateTime.Now.Month && p.NgayNhanPhong.Year == DateTime.Now.Year) ?? 0;
    var pendingRecords = Model?.Count(p => p.TinhTrang == "Chưa xác nhận") ?? 0;
    var completedRecords = Model?.Count(p => p.TinhTrang == "Đã xác nhận") ?? 0;
}

<div class="content-header px-2 px-md-3 pt-1 pb-0">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h2 class="h4 mb-0">@ViewData["Title"]</h2>
        <div class="d-flex align-items-center gap-2">
            <button type="button" class="btn btn-primary btn-sm" onclick="showPasswordModal(event)">
                <i class="fas fa-plus me-1"></i> Tạo Phiếu Mới
            </button>
        </div>
<!-- Modal xác nhận mật khẩu -->
<div class="modal fade" id="passwordModal" tabindex="-1" aria-labelledby="passwordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="passwordModalLabel">Xác nhận mật khẩu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Nhập mật khẩu để xác nhận</label>
                    <input type="password" class="form-control" id="confirmPassword" autocomplete="current-password">
                </div>
                <div id="passwordError" class="text-danger small"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="verifyPasswordAndRedirect()">Xác nhận</button>
            </div>
        </div>
    </div>
</div>
    </div>
</div>

<!-- Summary widgets -->
<div class="row px-2 px-md-3 mt-3 g-3">
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="small-box bg-gradient-primary mb-0">
            <div class="inner">
                <h3>@totalRecords</h3>
                <p>Tổng phiếu hiện trạng</p>
            </div>
            <div class="icon"><i class="fas fa-clipboard-list"></i></div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="small-box bg-gradient-info mb-0">
            <div class="inner">
                <h3>@thisMonthRecords</h3>
                <p>Tháng này</p>
            </div>
            <div class="icon"><i class="fas fa-calendar-alt"></i></div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="small-box bg-gradient-warning mb-0">
            <div class="inner">
                <h3>@pendingRecords</h3>
                <p>Chờ xác nhận</p>
            </div>
            <div class="icon"><i class="fas fa-clock"></i></div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="small-box bg-gradient-success mb-0">
            <div class="inner">
                <h3>@completedRecords</h3>
                <p>Đã xác nhận</p>
            </div>
            <div class="icon"><i class="fas fa-check-circle"></i></div>
        </div>
    </div>
    <div class="col-12"><hr class="my-2"></div>
</div>

<div class="row px-2 px-md-3 g-3 mt-3" id="phieuhientrangGrid">
    @if (Model.Count == 0)
    {
        <div class="alert alert-info">Không có phiếu hiện trạng nào.</div>
    }
    else
    {
        @foreach (var phieu in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3 phieuhientrang-item">
                <div class="card shadow-sm border-0 h-100 phieuhientrang-card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <span>Ngày nhận: @phieu.NgayNhanPhong.ToString("dd/MM/yyyy HH:mm")</span>
                        <span class="badge bg-secondary">@phieu.TinhTrang</span>
                    </div>
                    <div class="card-body p-3">
                        <h5 class="card-title">Khách thuê: @phieu.KhachThue?.HoTen</h5>
                        <p class="card-text"><strong>Ghi chú:</strong> @phieu.GhiChu</p>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered custom-table mb-0">
                                <thead class="thead-custom text-white">
                                    <tr>
                                        <th>Tên Vật Dụng</th>
                                        <th>Tình Trạng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (phieu.HienTrangVatDungs != null && phieu.HienTrangVatDungs.Any())
                                    {
                                        @foreach (var vatDung in phieu.HienTrangVatDungs)
                                        {
                                            <tr>
                                                <td>@vatDung.TenVatDung</td>
                                                <td>@vatDung.TinhTrang</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="2" class="text-center">Không có vật dụng nào.</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <script>
        function showPasswordModal(e) {
            e.preventDefault();
            document.getElementById('confirmPassword').value = '';
            document.getElementById('passwordError').innerText = '';
            var modal = new bootstrap.Modal(document.getElementById('passwordModal'));
            modal.show();
        }
        function verifyPasswordAndRedirect() {
            var password = document.getElementById('confirmPassword').value;
            var errorDiv = document.getElementById('passwordError');
            errorDiv.innerText = '';
            if (!password) {
                errorDiv.innerText = 'Vui lòng nhập mật khẩu.';
                return;
            }
            fetch('/ChuTroArea/PhieuHienTrang/VerifyPassword', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name=__RequestVerificationToken]')?.value || ''
                },
                body: JSON.stringify({ password: password })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/ChuTroArea/PhieuHienTrang/ChonPhong';
                } else {
                    errorDiv.innerText = data.message || 'Mật khẩu không đúng.';
                }
            })
            .catch(() => {
                errorDiv.innerText = 'Có lỗi xảy ra khi xác thực.';
            });
        }
    </script>
}
<style>
    .phieuhientrang-card {
        transition: transform .15s ease, box-shadow .15s ease;
        margin-bottom: 0;
        background-color: #f0f8ff;
    }
    .phieuhientrang-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }
    .phieuhientrang-card .card-title {
        font-size: 1.15rem;
        line-height: 1.3;
        color: #2c3e50;
    }
    .phieuhientrang-card .badge {
        font-size: 0.875rem;
        font-weight: 500;
        background-color: rgba(44, 189, 25, 0.8) !important;
        backdrop-filter: blur(10px);
    }
    .phieuhientrang-card .btn {
        font-size: 0.875rem;
        font-weight: 500;
    }
    .phieuhientrang-card .card-body > * + * {
        margin-top: 1rem;
    }
    .phieuhientrang-item {
        margin-bottom: 1rem;
    }
    .phieuhientrang-item:nth-last-child(-n+4) {
        margin-bottom: 0;
    }
    .phieuhientrang-item:nth-child(4n+1) .phieuhientrang-card {
        background-color: #e3ffff;
    }
    .phieuhientrang-item:nth-child(4n+2) .phieuhientrang-card {
        background-color: #fff9f0;
    }
    .phieuhientrang-item:nth-child(4n+3) .phieuhientrang-card {
        background-color: #f0fff4;
    }
    .phieuhientrang-item:nth-child(4n+4) .phieuhientrang-card {
        background-color: #fff0f5;
    }
    .phieuhientrang-card .card-title,
    .phieuhientrang-card .text-muted,
    .phieuhientrang-card .text-secondary {
        color: #2c3e50 !important;
    }
    .phieuhientrang-card table,
    .phieuhientrang-card th,
    .phieuhientrang-card td {
        color: #222 !important;
    }
</style>
