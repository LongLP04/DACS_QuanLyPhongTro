@model List<DACS_QuanLyPhongTro.Models.PhongTro>
@{
    ViewData["Title"] = "Chọn phòng để tạo phiếu hiện trạng";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
}

<div class="content-header px-2 px-md-3 pt-1 pb-0">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h2 class="h4 mb-0">@ViewData["Title"]</h2>
        <div class="d-flex align-items-center gap-2">
            <a asp-action="Index" asp-controller="Home" asp-area="ChuTroArea" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay Lại
            </a>
        </div>
    </div>
</div>

<div class="row px-2 px-md-3 g-3 mt-3" id="chonphongGrid">
    @foreach (var phong in Model)
    {
        var hopDong = phong.HopDongs
            .FirstOrDefault(h =>
                !string.IsNullOrEmpty(h.TrangThai) &&
                h.TrangThai.Trim().Equals("Đã Xác Nhận", StringComparison.OrdinalIgnoreCase));
        <div class="col-12 col-sm-6 col-lg-4 col-xl-3 chonphong-item">
            <div class="card shadow-sm border-0 h-100 chonphong-card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-start justify-content-between mb-2">
                        <div class="flex-grow-1 me-2">
                            <h5 class="card-title mb-1 fw-bold text-dark">
                                <i class="fas fa-door-open me-2 text-primary"></i>Phòng: @phong.SoPhong
                            </h5>
                            <div class="text-muted mb-2">
                                <i class="fas fa-user me-1"></i><span class="fs-6">@hopDong?.KhachThue?.HoTen</span>
                            </div>
                        </div>
                        <div class="avatar bg-gradient-primary text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width:40px;height:40px;">
                            <i class="fas fa-clipboard-list fs-6"></i>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <a asp-action="HienThiFormTaoPhieu" asp-route-maPhong="@phong.MaPhong" class="btn btn-primary btn-custom btn-zoom btn-sm px-4">Tạo phiếu</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .chonphong-card {
        transition: transform .15s ease, box-shadow .15s ease;
        margin-bottom: 0;
        background-color: #f0f8ff;
    }
    .chonphong-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }
    .avatar {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }
    .chonphong-card .card-title {
        font-size: 1.15rem;
        line-height: 1.3;
        color: #2c3e50;
    }
    .chonphong-card .btn {
        font-size: 0.95rem;
        font-weight: 500;
    }
    .chonphong-item {
        margin-bottom: 1rem;
    }
    .chonphong-item:nth-last-child(-n+4) {
        margin-bottom: 0;
    }
    .chonphong-item:nth-child(4n+1) .chonphong-card {
        background-color: #e3ffff;
    }
    .chonphong-item:nth-child(4n+2) .chonphong-card {
        background-color: #fff9f0;
    }
    .chonphong-item:nth-child(4n+3) .chonphong-card {
        background-color: #f0fff4;
    }
    .chonphong-item:nth-child(4n+4) .chonphong-card {
        background-color: #fff0f5;
    }
    .chonphong-card .card-title,
    .chonphong-card .text-muted,
    .chonphong-card .text-secondary {
        color: #2c3e50 !important;
    }
</style>
