@{
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
    var hoTen = ViewData["ChuTroHoTen"] as string ?? "Chủ trọ";
    var dashboardData = ViewData["DashboardData"] as DACS_QuanLyPhongTro.Areas.ChuTroArea.Controllers.DashboardData;
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-gradient-primary">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h3 class="text-white mb-0">Chào mừng trở lại, @hoTen!</h3>
                                <p class="text-white-50 mb-0">Đây là tổng quan về hoạt động quản lý phòng trọ của bạn</p>
                            </div>
                            <div class="col-md-4 text-right">
                                <i class="fas fa-chart-line fa-3x text-white opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@(dashboardData?.TongSoToaNha ?? 0)</h3>
                        <p>Tòa nhà</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <a href="@Url.Action("Index", "ToaNha", new { area = "ChuTroArea" })" class="small-box-footer">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@(dashboardData?.TongSoPhongTro ?? 0)</h3>
                        <p>Tổng phòng trọ</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <a href="@Url.Action("Index", "PhongTro", new { area = "ChuTroArea" })" class="small-box-footer">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@(dashboardData?.TongSoPhongDaThue ?? 0)</h3>
                        <p>Phòng đã thuê</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <a href="@Url.Action("Index", "HopDong", new { area = "ChuTroArea" })" class="small-box-footer">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@((dashboardData?.DoanhThuThangNay ?? 0).ToString("N0")) VNĐ</h3>
                        <p>Doanh thu tháng này</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <a href="@Url.Action("Index", "HoaDon", new { area = "ChuTroArea" })" class="small-box-footer">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row">
            <!-- Doanh thu theo tháng -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-bar mr-1"></i>
                            Doanh thu 6 tháng gần nhất
                        </h3>
                    </div>
                    <div class="card-body">
                        <canvas id="revenueChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>

            <!-- Tỷ lệ phòng trống/đã thuê -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-pie mr-1"></i>
                            Tỷ lệ phòng trống/đã thuê
                        </h3>
                    </div>
                    <div class="card-body">
                        <canvas id="roomStatusChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Second Charts Row -->
        <div class="row">
            <!-- Khách thuê mới -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-line mr-1"></i>
                            Khách thuê mới 6 tháng gần nhất
                        </h3>
                    </div>
                    <div class="card-body">
                        <canvas id="newTenantsChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>

            <!-- Sự cố theo tháng -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-exclamation-triangle mr-1"></i>
                            Sự cố theo tháng
                        </h3>
                    </div>
                    <div class="card-body">
                        <canvas id="incidentsChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Dữ liệu từ server
        var dashboardData = @Html.Raw(Json.Serialize(dashboardData));
        
        // Doanh thu theo tháng
        var revenueCtx = document.getElementById('revenueChart').getContext('2d');
        var revenueChart = new Chart(revenueCtx, {
            type: 'bar',
            data: {
                labels: dashboardData?.doanhThuTheoThang?.map(x => x.thang) || [],
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: dashboardData?.doanhThuTheoThang?.map(x => x.doanhThu) || [],
                    backgroundColor: 'rgba(54, 162, 235, 0.8)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString('vi-VN') + ' VNĐ';
                            }
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return 'Doanh thu: ' + context.parsed.y.toLocaleString('vi-VN') + ' VNĐ';
                            }
                        }
                    }
                }
            }
        });

        // Tỷ lệ phòng trống/đã thuê
        var roomStatusCtx = document.getElementById('roomStatusChart').getContext('2d');
        var roomStatusChart = new Chart(roomStatusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Phòng trống', 'Phòng đã thuê'],
                datasets: [{
                    data: [dashboardData?.tyLePhongTrong || 0, dashboardData?.tyLePhongDaThue || 0],
                    backgroundColor: ['rgba(255, 99, 132, 0.8)', 'rgba(75, 192, 192, 0.8)'],
                    borderColor: ['rgba(255, 99, 132, 1)', 'rgba(75, 192, 192, 1)'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Khách thuê mới
        var newTenantsCtx = document.getElementById('newTenantsChart').getContext('2d');
        var newTenantsChart = new Chart(newTenantsCtx, {
            type: 'line',
            data: {
                labels: dashboardData?.khachThueMoiTheoThang?.map(x => x.thang) || [],
                datasets: [{
                    label: 'Khách thuê mới',
                    data: dashboardData?.khachThueMoiTheoThang?.map(x => x.soKhachThueMoi) || [],
                    borderColor: 'rgba(255, 159, 64, 1)',
                    backgroundColor: 'rgba(255, 159, 64, 0.2)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // Sự cố theo tháng
        var incidentsCtx = document.getElementById('incidentsChart').getContext('2d');
        var incidentsChart = new Chart(incidentsCtx, {
            type: 'bar',
            data: {
                labels: dashboardData?.suCoTheoThang?.map(x => x.thang) || [],
                datasets: [{
                    label: 'Số sự cố',
                    data: dashboardData?.suCoTheoThang?.map(x => x.soSuCo) || [],
                    backgroundColor: 'rgba(220, 53, 69, 0.8)',
                    borderColor: 'rgba(220, 53, 69, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });
    </script>
}
