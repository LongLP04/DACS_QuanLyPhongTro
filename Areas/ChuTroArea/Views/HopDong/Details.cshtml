@model DACS_QuanLyPhongTro.Models.HopDong
@{
    ViewData["Title"] = "Chi Tiết Hợp Đồng";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
}

<div class="content-header px-2 px-md-3 pt-1 pb-0">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h2 class="h4 mb-0">@ViewData["Title"]</h2>
        <div class="d-flex align-items-center gap-2">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay Lại
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center mt-3">
    <div class="col-12 col-md-10 col-lg-8">
        <div class="card shadow-sm border-0 contract-detail-card">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar bg-gradient-primary text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 me-3" style="width:48px;height:48px;">
                        <i class="fas fa-file-contract fs-4"></i>
                    </div>
                    <h5 class="card-title mb-0 fw-bold text-dark">Chi Tiết Hợp Đồng</h5>
                </div>
                <div class="mb-2">
                    <span class="badge bg-primary-subtle text-primary border border-primary fs-6 px-2 py-1">
                        Mã hợp đồng: <strong>@Model.MaHopDong</strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-success-subtle text-success border border-success fs-6 px-2 py-1">
                        Phòng: <strong>@Model.PhongTro?.SoPhong</strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-info-subtle text-info border border-info fs-6 px-2 py-1">
                        Khách thuê: <strong>@Model.KhachThue?.HoTen</strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-warning-subtle text-warning border border-warning fs-6 px-2 py-1">
                        Ngày lập: <strong>@Model.NgayLap.ToString("dd/MM/yyyy")</strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-primary-subtle text-primary border border-primary fs-6 px-2 py-1">
                        Bắt đầu: <strong>@Model.NgayBatDau.ToString("dd/MM/yyyy")</strong>
                    </span>
                    <span class="badge bg-success-subtle text-success border border-success fs-6 px-2 py-1">
                        Kết thúc: <strong>@Model.NgayKetThuc.ToString("dd/MM/yyyy")</strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-warning-subtle text-warning border border-warning fs-6 px-2 py-1">
                        Tiền cọc: <strong>@Model.TienCoc.ToString("N0") VNĐ</strong>
                    </span>
                </div>
                <div class="mb-2">
                    @if (Model.TrangThai == "Đã Ký")
                    {
                        <span class="badge bg-success text-white px-2 py-1"><i class="fas fa-check me-1"></i>@Model.TrangThai</span>
                    }
                    else if (Model.TrangThai == "Chờ Ký")
                    {
                        <span class="badge bg-warning text-dark px-2 py-1"><i class="fas fa-clock me-1"></i>@Model.TrangThai</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white px-2 py-1"><i class="fas fa-times me-1"></i>@Model.TrangThai</span>
                    }
                </div>
                <div class="mb-2">
                    <label class="fw-bold">Nội dung hợp đồng:</label>
                    <div class="border rounded p-2 bg-light mt-1" style="min-height:60px;">
                        @Model.NoiDungHopDong
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0 pb-3 px-3">
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Delete" asp-route-id="@Model.MaHopDong" class="btn btn-outline-danger btn-sm px-2 py-1">
                        <i class="fas fa-trash me-1"></i>Xóa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .contract-detail-card {
        transition: transform .15s ease, box-shadow .15s ease;
        margin-bottom: 0;
        background-color: #f0fff4;
    }
    .contract-detail-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }
    .avatar {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }
    .contract-detail-card .card-title {
        font-size: 1.25rem;
        line-height: 1.3;
        color: #2c3e50;
    }
    .contract-detail-card .badge {
        font-size: 0.875rem;
        font-weight: 500;
        background-color: rgba(255, 255, 255, 0.8) !important;
        backdrop-filter: blur(10px);
    }
    .contract-detail-card .btn {
        font-size: 0.95rem;
        font-weight: 500;
    }
    .contract-detail-card .fw-bold {
        font-weight: 600;
    }
</style>
