@model List<DACS_QuanLyPhongTro.Models.PhieuGhiNhanSuCo>
@{
    ViewData["Title"] = "Danh Sách Phiếu Sự Cố";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
    
    var totalRecords = Model?.Count() ?? 0;
    var pendingRecords = Model?.Count(p => p.TinhTrang == "Chưa xử lý") ?? 0;
    var processingRecords = Model?.Count(p => p.TinhTrang == "Đã tiếp nhận") ?? 0;
    var completedRecords = Model?.Count(p => p.TinhTrang == "Đã xử lý") ?? 0;
}

<div class="content-header px-2 px-md-3 pt-1 pb-0">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h2 class="h4 mb-0">@ViewData["Title"]</h2>
    </div>
</div>

<!-- Summary widgets -->
<div class="row px-2 px-md-3 mt-3 g-3">
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="small-box bg-gradient-primary mb-0">
            <div class="inner">
                <h3>@totalRecords</h3>
                <p>Tổng phiếu sự cố</p>
            </div>
            <div class="icon"><i class="fas fa-exclamation-triangle"></i></div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="small-box bg-gradient-danger mb-0">
            <div class="inner">
                <h3>@pendingRecords</h3>
                <p>Chưa xử lý</p>
            </div>
            <div class="icon"><i class="fas fa-times-circle"></i></div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="small-box bg-gradient-warning mb-0">
            <div class="inner">
                <h3>@processingRecords</h3>
                <p>Đã tiếp nhận</p>
            </div>
            <div class="icon"><i class="fas fa-clock"></i></div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="small-box bg-gradient-success mb-0">
            <div class="inner">
                <h3>@completedRecords</h3>
                <p>Đã xử lý</p>
            </div>
            <div class="icon"><i class="fas fa-check-circle"></i></div>
        </div>
    </div>
    <div class="col-12"><hr class="my-2"></div>
</div>

@if (TempData["ThongBao"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" id="thongBao" role="alert">
        @TempData["ThongBao"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (ViewBag.CoPhieuChuaXuLy == true)
{
    <div class="alert alert-warning mt-3">
        Có phiếu sự cố chưa xử lý. Vui lòng kiểm tra và xác nhận!
    </div>
}
@if (Model.Count == 0)
{
    <div class="alert alert-info mt-3">Không có phiếu sự cố nào.</div>
}
else
{
    <div class="row px-2 px-md-3 g-3 mt-3" id="phieusucoGrid">
        @foreach (var phieu in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3 phieusuco-item">
                <div class="card shadow-sm border-0 h-100 phieusuco-card">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-start justify-content-between mb-2">
                            <div class="flex-grow-1 me-2">
                                <h5 class="card-title mb-1 fw-bold text-dark">
                                    <i class="fas fa-exclamation-triangle me-2 text-danger"></i>Mã phiếu: @phieu.MaPhieuSuCo
                                </h5>
                                <div class="text-muted mb-2">
                                    <i class="fas fa-user me-1"></i>Khách thuê: <span class="fs-6">@phieu.KhachThue?.HoTen</span>
                                </div>
                                <div class="text-muted mb-2">
                                    <i class="fas fa-door-open me-1"></i>Phòng: <span class="fs-6">@(phieu.KhachThue?.PhongTros != null && phieu.KhachThue.PhongTros.Any() ? phieu.KhachThue.PhongTros.First().SoPhong : "Chưa có phòng")</span>
                                </div>
                                <div class="text-muted mb-2">
                                    <i class="fas fa-calendar-alt me-1"></i>Ngày ghi nhận: <span class="fs-6">@phieu.NgayGhiNhan.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>
                            <div class="avatar bg-gradient-primary text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width:40px;height:40px;">
                                <i class="fas fa-tools fs-6"></i>
                            </div>
                        </div>
                        <div class="mb-2">
                            <span class="badge bg-warning-subtle text-warning border border-warning fs-6 px-2 py-1">
                                Mô tả: <strong>@phieu.MoTaSuCo</strong>
                            </span>
                        </div>
                        <div class="mb-2">
                            <span class="badge bg-info-subtle text-info border border-info fs-6 px-2 py-1">
                                Hiện trạng: <strong>@phieu.HienTrang</strong>
                            </span>
                        </div>
                        <div class="mb-2">
                            <span class="badge bg-success-subtle text-success border border-success fs-6 px-2 py-1">
                                Ghi chú: <strong>@phieu.GhiChu</strong>
                            </span>
                        </div>
                        <div class="mb-2">
                            @if (phieu.TinhTrang == "Chưa xử lý" || phieu.TinhTrang == "Đã tiếp nhận")
                            {
                                <form asp-action="XacNhan" method="post" class="d-flex flex-column flex-md-row align-items-center gap-2">
                                    <input type="hidden" name="id" value="@phieu.MaPhieuSuCo" />
                                    <select name="tinhTrang" class="form-select form-select-sm w-auto" required>
                                        <option value="">Chọn trạng thái</option>
                                        @if (phieu.TinhTrang == "Chưa xử lý")
                                        {
                                            <option value="Đã tiếp nhận">Đã tiếp nhận</option>
                                        }
                                        <option value="Đã xử lý">Đã xử lý</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary btn-sm px-3">Xác nhận</button>
                                </form>
                            }
                            else
                            {
                                <span class="badge bg-success text-white px-2 py-1"><i class="fas fa-check me-1"></i>Đã xử lý</span>
                            }
                        </div>
                        <div class="mb-2">
                            <span class="badge bg-primary-subtle text-primary border border-primary fs-6 px-2 py-1">
                                Tình trạng: <strong>@phieu.TinhTrang</strong>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var thongBao = document.getElementById("thongBao");
            if (thongBao) {
                setTimeout(function () {
                    thongBao.style.transition = "opacity 0.5s ease-out";
                    thongBao.style.opacity = "0";
                    setTimeout(function () {
                        thongBao.style.display = "none";
                    }, 500);
                }, 5000);
            }
        });
    </script>
}
<style>
    .phieusuco-card {
        transition: transform .15s ease, box-shadow .15s ease;
        margin-bottom: 0;
        background-color: #f0f8ff;
    }
    .phieusuco-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }
    .avatar {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }
    .phieusuco-card .card-title {
        font-size: 1.15rem;
        line-height: 1.3;
        color: #2c3e50;
    }
    .phieusuco-card .badge {
        font-size: 0.875rem;
        font-weight: 500;
        background-color: rgba(255, 255, 255, 0.8) !important;
        backdrop-filter: blur(10px);
    }
    .phieusuco-card .btn {
        font-size: 0.875rem;
        font-weight: 500;
    }
    .phieusuco-card .card-body > * + * {
        margin-top: 1rem;
    }
    .phieusuco-item {
        margin-bottom: 1rem;
    }
    .phieusuco-item:nth-last-child(-n+4) {
        margin-bottom: 0;
    }
    .phieusuco-item:nth-child(4n+1) .phieusuco-card {
        background-color: #e3ffff;
    }
    .phieusuco-item:nth-child(4n+2) .phieusuco-card {
        background-color: #fff9f0;
    }
    .phieusuco-item:nth-child(4n+3) .phieusuco-card {
        background-color: #f0fff4;
    }
    .phieusuco-item:nth-child(4n+4) .phieusuco-card {
        background-color: #fff0f5;
    }
    .phieusuco-card .card-title,
    .phieusuco-card .text-muted,
    .phieusuco-card .text-secondary {
        color: #2c3e50 !important;
    }
</style>
