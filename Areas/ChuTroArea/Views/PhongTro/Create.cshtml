@model DACS_QuanLyPhongTro.Models.PhongTro

@{
    ViewData["Title"] = "Thêm Phòng Trọ";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";

    var toaNhaSoTangJson = Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ToaNhaSoTang ?? new Dictionary<int, int>());
}

<div class="container my-5" style="max-width: 700px;">
    <h2 class="text-highlight mb-4 text-center">@ViewData["Title"]</h2>

    <hr />

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="SoPhong" class="form-label">Số phòng</label>
            <input asp-for="SoPhong" class="form-control" />
            <span asp-validation-for="SoPhong" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MaToaNha" class="form-label">Tên tòa nhà</label>
            <select asp-for="MaToaNha" class="form-select" asp-items="ViewBag.MaToaNha" id="selectToaNha">
                <option value="">-- Chọn tòa nhà --</option>
            </select>
            <span asp-validation-for="MaToaNha" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Tang" class="form-label">Tầng</label>
            <select asp-for="Tang" class="form-select" id="selectTang">
                <option value="">-- Chọn tầng --</option>
            </select>
            <span asp-validation-for="Tang" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Hinhanh" class="form-label">Hình ảnh</label>
            <input type="file" name="Hinhanh" class="form-control" accept=".jpg,.jpeg,.png" />
            <span class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DienTich" class="form-label">Diện tích</label>
            <input asp-for="DienTich" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="DienTich" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GiaThue" class="form-label">Giá thuê</label>
            <input asp-for="GiaThue" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="GiaThue" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TrangThai" class="form-label">Trạng thái</label>
            <select asp-for="TrangThai" class="form-select">
                <option value="Trống">Trống</option>
                <option value="Đã thuê">Đã thuê</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MoTa" class="form-label">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-custom px-5">Thêm</button>
            <a asp-action="Index" class="btn btn-secondary ms-3 px-4">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var toaNhaSoTang = @Html.Raw(toaNhaSoTangJson);

        function capNhatTang(maToaNha) {
            var selectTang = document.getElementById("selectTang");
            selectTang.innerHTML = '<option value="">-- Chọn tầng --</option>';

            if (maToaNha && toaNhaSoTang[maToaNha]) {
                for (var i = 1; i <= toaNhaSoTang[maToaNha]; i++) {
                    var option = document.createElement("option");
                    option.value = i;
                    option.text = i;
                    selectTang.appendChild(option);
                }
            }
        }

        document.getElementById("selectToaNha").addEventListener("change", function () {
            capNhatTang(this.value);
        });

        $(document).ready(function () {
            var defaultToaNha = $("#selectToaNha").val();
            if (defaultToaNha) {
                capNhatTang(defaultToaNha);
            }
        });
    </script>
}
