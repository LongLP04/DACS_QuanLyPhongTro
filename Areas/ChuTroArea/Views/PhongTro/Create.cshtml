@model DACS_QuanLyPhongTro.Models.PhongTro

@{
    ViewData["Title"] = "Thêm Phòng Trọ";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";

    var toaNhaSoTangJson = Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ToaNhaSoTang ?? new Dictionary<int, int>());
}

@Html.AntiForgeryToken()

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="content-header px-2 px-md-3 pt-1 pb-0">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h2 class="h4 mb-0">@ViewData["Title"]</h2>
        <div class="d-flex align-items-center gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>
</div>

<!-- Summary widget -->
<div class="row px-2 px-md-3 mt-3 g-3">
    <div class="col-12">
        <div class="small-box bg-gradient-info mb-0">
            <div class="inner">
                <h3><i class="fas fa-plus-circle me-2"></i>Thêm Phòng Trọ Mới</h3>
                <p>Nhập thông tin chi tiết để tạo phòng trọ mới vào hệ thống</p>
            </div>
            <div class="icon"><i class="fas fa-bed"></i></div>
        </div>
    </div>
    <div class="col-12"><hr class="my-2"></div>
</div>

<div class="row px-2 px-md-3 g-3">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoPhong" class="form-label fw-bold">
                                    <i class="fas fa-door-open me-2 text-primary"></i>Số phòng
                                </label>
                                <input asp-for="SoPhong" class="form-control form-control-lg" placeholder="Nhập số phòng" />
                                <span asp-validation-for="SoPhong" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MaToaNha" class="form-label fw-bold">
                                    <i class="fas fa-building me-2 text-success"></i>Tên tòa nhà
                                </label>
                                <select asp-for="MaToaNha" class="form-select form-select-lg" asp-items="ViewBag.MaToaNha" id="selectToaNha">
                                    <option value="">-- Chọn tòa nhà --</option>
                                </select>
                                <span asp-validation-for="MaToaNha" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Tang" class="form-label fw-bold">
                                    <i class="fas fa-layer-group me-2 text-warning"></i>Tầng
                                </label>
                                <select asp-for="Tang" class="form-select form-select-lg" id="selectTang">
                                    <option value="">-- Chọn tầng --</option>
                                </select>
                                <span asp-validation-for="Tang" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DienTich" class="form-label fw-bold">
                                    <i class="fas fa-ruler-combined me-2 text-info"></i>Diện tích (m²)
                                </label>
                                <input asp-for="DienTich" class="form-control form-control-lg" type="number" step="0.01" min="0" placeholder="Nhập diện tích" />
                                <span asp-validation-for="DienTich" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="GiaThue" class="form-label fw-bold">
                                    <i class="fas fa-money-bill-wave me-2 text-success"></i>Giá thuê (VND)
                                </label>
                                <input asp-for="GiaThue" class="form-control form-control-lg" type="number" step="1000" min="0" placeholder="Nhập giá thuê" />
                                <span asp-validation-for="GiaThue" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TrangThai" class="form-label fw-bold">
                                    <i class="fas fa-info-circle me-2 text-warning"></i>Trạng thái
                                </label>
                                <select asp-for="TrangThai" class="form-select form-select-lg">
                                    <option value="Trống">Trống</option>
                                    <option value="Đã thuê">Đã thuê</option>
                                </select>
                                <span asp-validation-for="TrangThai" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Hinhanh" class="form-label fw-bold">
                                    <i class="fas fa-image me-2 text-danger"></i>Hình ảnh phòng
                                </label>
                                <input type="file" name="Hinhanh" class="form-control form-control-lg" accept=".jpg,.jpeg,.png" />
                                <small class="form-text text-muted mt-2">
                                    <i class="fas fa-info-circle me-1"></i>Chỉ hỗ trợ định dạng .jpg, .jpeg, .png
                                </small>
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="MoTa" class="form-label fw-bold">
                                    <i class="fas fa-comment-alt me-2 text-info"></i>Mô tả phòng
                                </label>
                                <textarea asp-for="MoTa" class="form-control form-control-lg" rows="4" placeholder="Nhập mô tả chi tiết về phòng trọ"></textarea>
                                <span asp-validation-for="MoTa" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg px-5 me-3">
                            <i class="fas fa-save me-2"></i>Thêm phòng trọ
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg px-5">
                            <i class="fas fa-times me-2"></i>Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .small-box .icon{right:10px; top: 6px;}
    .form-control-lg, .form-select-lg {
        border-radius: 8px;
        border: 2px solid #e9ecef;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }
    .form-control-lg:focus, .form-select-lg:focus {
        border-color: #6a11cb;
        box-shadow: 0 0 0 0.2rem rgba(106, 17, 203, 0.25);
    }
    .form-label {
        color: #2c3e50;
        font-size: 0.95rem;
    }
    .card {
        border-radius: 12px;
        transition: transform .15s ease, box-shadow .15s ease;
    }
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }
    .btn-lg {
        border-radius: 8px;
        font-weight: 500;
        transition: all .15s ease;
    }
    .btn-lg:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(0,0,0,.15);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var toaNhaSoTang = @Html.Raw(toaNhaSoTangJson);

        function capNhatTang(maToaNha) {
            var selectTang = document.getElementById("selectTang");
            selectTang.innerHTML = '<option value="">-- Chọn tầng --</option>';

            if (maToaNha && toaNhaSoTang[maToaNha]) {
                for (var i = 1; i <= toaNhaSoTang[maToaNha]; i++) {
                    var option = document.createElement("option");
                    option.value = i;
                    option.text = i;
                    selectTang.appendChild(option);
                }
            }
        }

        document.getElementById("selectToaNha").addEventListener("change", function () {
            capNhatTang(this.value);
        });

        $(document).ready(function () {
            var defaultToaNha = $("#selectToaNha").val();
            if (defaultToaNha) {
                capNhatTang(defaultToaNha);
            }
        });
    </script>
}
