@model DACS_QuanLyPhongTro.Models.PhongTro

@{
    ViewData["Title"] = "Thêm Phòng Trọ";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";

    // Lấy dictionary tòa nhà => số tầng từ ViewBag, serialize thành JSON
    var toaNhaSoTangJson = Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ToaNhaSoTang ?? new Dictionary<int, int>());
}

<h2>Thêm Phòng Trọ</h2>

<hr />
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="SoPhong" class="control-label"></label>
                <input asp-for="SoPhong" class="form-control" />
                <span asp-validation-for="SoPhong" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaToaNha" class="control-label"></label>
                <select asp-for="MaToaNha" class="form-control" asp-items="ViewBag.MaToaNha" id="selectToaNha">
                    <option value="">-- Chọn tòa nhà --</option>  @* Thêm option mặc định này *@
                </select>
                <span asp-validation-for="MaToaNha" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label asp-for="Tang" class="control-label"></label>
                <select asp-for="Tang" class="form-control" id="selectTang">
                    <option value="">-- Chọn tầng --</option>
                    @* Giá trị tầng sẽ được JS đổ vào *@
                </select>
                <span asp-validation-for="Tang" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Hinhanh" class="control-label">Hình ảnh</label>
                <input type="file" name="Hinhanh" class="form-control" accept=".jpg,.jpeg,.png" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DienTich" class="control-label"></label>
                <input asp-for="DienTich" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="DienTich" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GiaThue" class="control-label"></label>
                <input asp-for="GiaThue" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="GiaThue" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="Trống">Trống</option>
                    <option value="Đã thuê">Đã thuê</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MoTa" class="control-label"></label>
                <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Parse dictionary tòa nhà => số tầng
        var toaNhaSoTang = @Html.Raw(toaNhaSoTangJson);

        function capNhatTang(maToaNha) {
            var selectTang = document.getElementById("selectTang");
            selectTang.innerHTML = '<option value="">-- Chọn tầng --</option>';

            if (maToaNha && toaNhaSoTang[maToaNha]) {
                var soTang = toaNhaSoTang[maToaNha];
                for (var i = 1; i <= soTang; i++) {
                    var option = document.createElement("option");
                    option.value = i;
                    option.text = i; 
                    selectTang.appendChild(option);
                }
            }
        }

        document.getElementById("selectToaNha").addEventListener("change", function () {
            capNhatTang(this.value);
        });

        // Nếu có giá trị mặc định, có thể tự động gọi cập nhật tầng ở đây (nếu cần)
        $(document).ready(function () {
            var defaultToaNha = $("#selectToaNha").val();
            if (defaultToaNha) {
                capNhatTang(defaultToaNha);
            }
        });
    </script>
}
