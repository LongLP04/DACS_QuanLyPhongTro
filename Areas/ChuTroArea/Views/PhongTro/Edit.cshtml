@model DACS_QuanLyPhongTro.Models.PhongTro

@{
    ViewData["Title"] = "Sửa Phòng Trọ";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<h2>Sửa Phòng Trọ</h2>

<hr />
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaPhong" />
            <div class="form-group mb-3">
                <label asp-for="SoPhong" class="control-label"></label>
                <input asp-for="SoPhong" class="form-control" />
                <span asp-validation-for="SoPhong" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Tang" class="control-label"></label>
                <input asp-for="Tang" class="form-control" type="number" min="1" />
                <span asp-validation-for="Tang" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Hinhanh" class="control-label">Hình ảnh</label>
                @if (!string.IsNullOrEmpty(Model.Hinhanh))
                {
                    <div class="mb-2">
                        <img src="@Model.Hinhanh" alt="Hình ảnh hiện tại" style="max-width: 200px; max-height: 200px;" />
                    </div>
                }
                <input type="file" name="Hinhanh" class="form-control" accept=".jpg,.jpeg,.png" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DienTich" class="control-label"></label>
                <input asp-for="DienTich" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="DienTich" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="GiaThue" class="control-label"></label>
                <input asp-for="GiaThue" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="GiaThue" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="Trống">Trống</option>
                    <option value="Đã thuê">Đã thuê</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MoTa" class="control-label"></label>
                <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MaToaNha" class="control-label"></label>
                <select asp-for="MaToaNha" class="form-control" asp-items="ViewBag.MaToaNha"></select>
                <span asp-validation-for="MaToaNha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("form").submit(function (e) {
                if ($(this).valid()) {
                    console.log("Form is valid, submitting...");
                } else {
                    console.log("Validation failed", $(this).validate().errorList);
                }
            });
        });
    </script>
}