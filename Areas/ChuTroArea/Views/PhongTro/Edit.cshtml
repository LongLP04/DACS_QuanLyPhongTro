@model DACS_QuanLyPhongTro.Models.PhongTro

@{
    ViewData["Title"] = "Sửa Phòng Trọ";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<div class="container my-5" style="max-width: 700px;">
    <h2 class="text-highlight mb-4 text-center">@ViewData["Title"]</h2>

    <hr />
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="MaPhong" />

        <div class="mb-3">
            <label asp-for="SoPhong" class="form-label"></label>
            <input asp-for="SoPhong" class="form-control" />
            <span asp-validation-for="SoPhong" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MaToaNha" class="form-label"></label>
            <select asp-for="MaToaNha" class="form-select" asp-items="ViewBag.MaToaNha"></select>
            <span asp-validation-for="MaToaNha" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Tang" class="form-label"></label>
            <input asp-for="Tang" class="form-control" type="number" min="1" />
            <span asp-validation-for="Tang" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Hinhanh" class="form-label">Hình ảnh</label>
            @if (!string.IsNullOrEmpty(Model.Hinhanh))
            {
                <img src="@Url.Content("~/" + Model.Hinhanh)" alt="Hình ảnh phòng trọ" class="img-fluid rounded border" style="max-height: 400px; width: 100%; object-fit: contain;" />
            }
            else
            {
                <img src="~/images/default-room.jpg" alt="Không có hình ảnh" class="img-fluid rounded border" style="max-height: 400px; width: 100%; object-fit: contain;" />
            }
            <input type="file" name="Hinhanh" class="form-control" accept=".jpg,.jpeg,.png" />
            <span class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DienTich" class="form-label"></label>
            <input asp-for="DienTich" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="DienTich" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GiaThue" class="form-label"></label>
            <input asp-for="GiaThue" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="GiaThue" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TrangThai" class="form-label"></label>
            <select asp-for="TrangThai" class="form-select">
                <option value="Trống">Trống</option>
                <option value="Đã thuê">Đã thuê</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MoTa" class="form-label"></label>
            <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-custom px-5">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary ms-3 px-4">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("form").submit(function (e) {
                if ($(this).valid()) {
                    console.log("Form is valid, submitting...");
                } else {
                    console.log("Validation failed", $(this).validate().errorList);
                }
            });
        });
    </script>
}

