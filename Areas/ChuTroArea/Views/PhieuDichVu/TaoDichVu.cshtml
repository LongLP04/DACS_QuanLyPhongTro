@model DACS_QuanLyPhongTro.Models.DichVu

@{
    ViewData["Title"] = "Thêm dịch vụ";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
}

<div class="content-header px-2 px-md-3 pt-1 pb-0">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h2 class="h4 mb-0">@ViewData["Title"]</h2>
        <div class="d-flex align-items-center gap-2">
            <a asp-action="DanhSachDichVu" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay Lại
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center mt-3">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 dichvu-create-card">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar bg-gradient-primary text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 me-3" style="width:48px;height:48px;">
                        <i class="fas fa-cog fs-4"></i>
                    </div>
                    <h5 class="card-title mb-0 fw-bold text-dark">Thêm dịch vụ mới</h5>
                </div>
                <form asp-action="TaoDichVu" method="post">
                    <div class="form-group mb-3">
                        <label>Tên dịch vụ</label>
                        <input asp-for="TenDichVu" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label>Đơn giá</label>
                        <input asp-for="DonGiaDichVu" class="form-control" required type="number" />
                    </div>
                    <div class="form-group mb-3">
                        <label>Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control"></textarea>
                    </div>
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" class="btn btn-success btn-sm px-5">Lưu</button>
                        <a asp-action="DanhSachDichVu" class="btn btn-outline-secondary btn-sm px-4">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    .dichvu-create-card {
        transition: transform .15s ease, box-shadow .15s ease;
        margin-bottom: 0;
        background-color: #f0fff4;
    }
    .dichvu-create-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }
    .avatar {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }
    .dichvu-create-card .card-title {
        font-size: 1.15rem;
        line-height: 1.3;
        color: #2c3e50;
    }
    .dichvu-create-card .btn {
        font-size: 0.95rem;
        font-weight: 500;
    }
    .dichvu-create-card .form-label {
        font-weight: 600;
    }
</style>
