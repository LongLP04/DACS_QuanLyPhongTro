@model DACS_QuanLyPhongTro.Models.DichVu
@{
    ViewData["Title"] = "Thêm dịch vụ";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<h2 class="text-success">Thêm dịch vụ mới</h2>

<form asp-action="TaoDichVu" method="post">
    <div class="form-group">
        <label>Tên dịch vụ</label>
        <input asp-for="TenDichVu" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Đơn giá</label>
        <input asp-for="DonGiaDichVu" class="form-control" required type="number" />
    </div>
    <div class="form-group">
        <label>Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="DanhSachDichVu" class="btn btn-secondary">Hủy</a>
    
</form>

