@model DACS_QuanLyPhongTro.Models.DichVu

@{
    ViewData["Title"] = "Sửa dịch vụ";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-primary text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="SuaDichVu" method="post">
        <input type="hidden" asp-for="MaDichVu" />

        <div class="form-group mb-3">
            <label>Tên dịch vụ</label>
            <input asp-for="TenDichVu" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Đơn giá</label>
            <input asp-for="DonGiaDichVu" class="form-control" required type="number" />
        </div>

        <div class="form-group mb-3">
            <label>Mô tả</label>
            <textarea asp-for="MoTa" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-custom btn-zoom">Cập nhật</button>
        <a asp-action="DanhSachDichVu" class="btn btn-secondary btn-custom btn-zoom ms-2">Hủy</a>
    </form>
</div>

<style>
    .btn-custom {
        font-weight: 600;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-custom.btn-zoom:hover {
            transform: scale(1.1);
            position: relative;
            z-index: 10;
        }
</style>
