@model DACS_QuanLyPhongTro.Models.DichVu

@{
    ViewData["Title"] = "Xóa dịch vụ";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-danger text-center mb-4">@ViewData["Title"]</h2>

    <div class="alert alert-warning">
        Bạn có chắc chắn muốn xóa dịch vụ này không? Hành động này không thể hoàn tác.
    </div>

    <form asp-action="XoaDichVu" method="post">
        <input type="hidden" asp-for="MaDichVu" />

        <div class="form-group mb-3">
            <label>Tên dịch vụ:</label>
            <input asp-for="TenDichVu" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label>Đơn giá:</label>
            <input asp-for="DonGiaDichVu" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label>Mô tả:</label>
            <textarea asp-for="MoTa" class="form-control" readonly></textarea>
        </div>

        <button type="submit" class="btn btn-danger btn-custom btn-zoom">Xóa</button>
        <a asp-action="DanhSachDichVu" class="btn btn-secondary btn-custom btn-zoom ms-2">Hủy</a>
    </form>
</div>
