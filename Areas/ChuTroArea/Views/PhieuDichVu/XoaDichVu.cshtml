@model DACS_QuanLyPhongTro.Models.DichVu

@{
    ViewData["Title"] = "Xóa dịch vụ";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<h2 class="text-danger">Xóa dịch vụ</h2>

<div class="alert alert-warning">
    Bạn có chắc chắn muốn xóa dịch vụ này không? Hành động này không thể hoàn tác.
</div>

<form asp-action="XoaDichVu" method="post">
    <input type="hidden" asp-for="MaDichVu" />

    <div class="form-group">
        <label>Tên dịch vụ:</label>
        <input asp-for="TenDichVu" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Đơn giá:</label>
        <input asp-for="DonGiaDichVu" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Mô tả:</label>
        <textarea asp-for="MoTa" class="form-control" readonly></textarea>
    </div>

    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="DanhSachDichVu" class="btn btn-secondary">Hủy</a>
</form>
