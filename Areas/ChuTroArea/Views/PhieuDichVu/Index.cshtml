@model List<DACS_QuanLyPhongTro.Models.PhieuDangKyDichVu>

@{
    ViewData["Title"] = "Dịch vụ đã xác nhận";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
}

<div class="container mt-5" style="max-width: 1100px;">
    <h2 class="mb-4 text-highlight text-center">@ViewData["Title"]</h2>
    <div class="mb-3 text-center">
        <a asp-action="DanhSachDichVu" class="btn btn-warning btn-custom me-2">Quản lý dịch vụ</a>
        <a asp-action="TaoDichVu" class="btn btn-success btn-custom">Thêm dịch vụ mới</a>
    </div>

    @if ((bool)ViewBag.CoPhieuCho)
    {
        <div class="alert alert-warning d-flex justify-content-between align-items-center">
            <span>Có phiếu đăng ký dịch vụ đang chờ xác nhận!</span>
            <a asp-action="DanhSachChoXacNhan" class="btn btn-sm btn-outline-success btn-custom">Xác nhận ngay</a>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">Chưa có dịch vụ nào được xác nhận.</div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded custom-table">
            <table id="pdvTable" class="table table-bordered table-hover">
                <thead class="thead-custom text-white">
                    <tr>
                        <th>Khách thuê</th>
                        <th>Phòng</th>
                        <th>Dịch vụ</th>
                        <th>Tổng tiền</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var phieu in Model)
                    {
                        var phongContext = Context.RequestServices.GetService(typeof(DACS_QuanLyPhongTro.Models.ApplicationDbContext)) as DACS_QuanLyPhongTro.Models.ApplicationDbContext;
                        var maPhong = phongContext.HopDongs.FirstOrDefault(h => h.MaKhachThue == phieu.MaKhachThue)?.MaPhong ?? 0;

                        <tr>
                            <td class="fw-bold">@phieu.KhachThue.HoTen</td>
                            <td>Phòng @maPhong</td>
                            <td>
                                <ul>
                                    @foreach (var ct in phieu.ChiTietPhieuDangKyDichVus)
                                    {
                                        <li>@ct.DichVu.TenDichVu - SL: @ct.SoLuong - @ct.TongTienDichVu.ToString("N0") VND</li>
                                    }
                                </ul>
                            </td>
                            <td class="text-danger fw-bold">
                                @phieu.ChiTietPhieuDangKyDichVus.Sum(c => c.TongTienDichVu).ToString("N0") VND
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@phieu.MaDangKyDichVu" class="btn btn-info btn-sm btn-custom btn-zoom me-1">Xem</a>
                                <form asp-action="XoaPhieu" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa phiếu này?');">
                                    <input type="hidden" name="id" value="@phieu.MaDangKyDichVu" />
                                    <button type="submit" class="btn btn-danger btn-sm btn-custom-danger btn-zoom">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .text-highlight {
        font-weight: 700;
        font-size: 2.5rem;
        background: linear-gradient(90deg, #ff8a00, #e52e71);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.3);
    }
    .btn-custom {
        font-weight: 600;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-custom.btn-zoom:hover {
            transform: scale(1.1);
            position: relative;
            z-index: 10;
        }

    .btn-custom-danger {
        background-color: #e53935 !important;
        border-color: #e53935 !important;
        color: white !important;
    }

        .btn-custom-danger:hover {
            background-color: #ef5350 !important;
            border-color: #ef5350 !important;
            color: #330000 !important;
        }

    .btn-warning.btn-custom {
        background-color: #ffb74d !important;
        border-color: #ffb74d !important;
        color: #4e342e !important;
    }

        .btn-warning.btn-custom:hover {
            background-color: #ffcc80 !important;
            border-color: #ffcc80 !important;
            color: #663c00 !important;
        }

    .custom-table {
        background-color: #f8f9fa;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(111, 66, 193, 0.2);
        transition: box-shadow 0.3s ease;
    }

        .custom-table:hover {
            box-shadow: 0 8px 24px rgba(111, 66, 193, 0.4);
        }

    .thead-custom {
        background-color: #5a2ea6;
    }

    .custom-table tbody tr:hover {
        background-color: #d9caff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .custom-table tbody tr:hover td {
            position: relative;
        }

            .custom-table tbody tr:hover td:hover {
                background-color: #a884f7 !important;
                color: #3e2d5e;
                font-weight: 600;
            }

    .custom-table th, .custom-table td {
        font-weight: 700;
        vertical-align: middle;
    }
</style>
@section Scripts {
    <script>
        $(function () {
            $('#pdvTable').DataTable({
                pageLength: 10,
                lengthChange: false,
                order: [],
                language: { url: 'https://cdn.datatables.net/plug-ins/1.13.5/i18n/vi.json' }
            });
        });
    </script>
}
