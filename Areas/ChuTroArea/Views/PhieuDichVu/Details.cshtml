@model DACS_QuanLyPhongTro.Models.PhieuDangKyDichVu

@{
    ViewData["Title"] = "Chi tiết Phiếu đăng ký dịch vụ";
    Layout = "/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
}

<div class="container mt-5" style="max-width: 800px;">
    <h2 class="mb-4 text-primary text-center">@ViewData["Title"]</h2>

    <table class="table table-bordered shadow-sm rounded">
        <tbody>
            <tr>
                <th style="width: 30%;">Khách thuê</th>
                <td>@Model.KhachThue.HoTen</td>
            </tr>
            <tr>
                <th>Trạng thái</th>
                <td>@Model.TrangThai</td>
            </tr>
            <tr>
                <th>Chi tiết dịch vụ</th>
                <td>
                    <ul>
                        @foreach (var ct in Model.ChiTietPhieuDangKyDichVus)
                        {
                            <li>@ct.DichVu.TenDichVu - Số lượng: @ct.SoLuong - Thành tiền: @ct.TongTienDichVu.ToString("N0") VNĐ</li>
                        }
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-custom btn-zoom">Quay lại</a>
    </div>
</div>

<style>
    .btn-custom {
        font-weight: 600;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-custom.btn-zoom:hover {
            transform: scale(1.1);
            position: relative;
            z-index: 10;
        }
</style>
