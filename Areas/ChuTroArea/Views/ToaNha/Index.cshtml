@model IEnumerable<DACS_QuanLyPhongTro.Models.ToaNha>
@{
    ViewData["Title"] = "Danh sách Tòa Nhà";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<h2 class="text-highlight mb-4 text-center">@ViewData["Title"]</h2>

<p class="text-center">
    <a asp-action="Create" class="btn btn-primary btn-custom btn-lg px-5">Thêm mới tòa nhà</a>
</p>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-bordered table-hover custom-table">
        <thead class="thead-custom text-white">
            <tr>
                <th>Tên Tòa Nhà</th>
                <th>Địa Chỉ</th>
                <th>Tổng Số Tầng</th>
                <th>Mô Tả</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenToaNha</td>
                    <td>@item.DiaChi</td>
                    <td>@item.TongSoTang</td>
                    <td>@item.MoTa</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaToaNha" class="btn btn-warning btn-sm btn-custom-warning btn-zoom">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.MaToaNha" class="btn btn-danger btn-sm btn-custom-danger btn-zoom">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Nền tím nhẹ cho toàn trang */
    body {
        background-color: #6f42c1; /* tím nhẹ */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Tiêu đề nổi bật hơn với màu gradient và bóng chữ */
    .text-highlight {
        font-weight: 700;
        font-size: 2.5rem;
        background: linear-gradient(90deg, #ff8a00, #e52e71);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.3);
    }

    /* Custom bảng */
    .custom-table {
        background-color: #f8f9fa;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(111, 66, 193, 0.2);
        transition: box-shadow 0.3s ease;
        /* bỏ table-layout fixed để cho cột tự giãn */
        word-wrap: break-word;
        white-space: normal;
    }

        .custom-table:hover {
            box-shadow: 0 8px 24px rgba(111, 66, 193, 0.4);
        }

    /* Đầu bảng tím đậm */
    .thead-custom {
        background-color: #5a2ea6;
    }

    /* Hover từng dòng */
    .custom-table tbody tr:hover {
        background-color: #d9caff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        /* Hiệu ứng highlight từng cột khi hover */
        .custom-table tbody tr:hover td {
            position: relative;
        }

            .custom-table tbody tr:hover td:hover {
                background-color: #a884f7 !important;
                color: #3e2d5e; /* Màu chữ đậm hơn, không phải trắng */
                transition: background-color 0.3s ease, color 0.3s ease;
                font-weight: 600;
            }

    /* Nút chung */
    .btn-custom {
        background-color: #7e57c2;
        border-color: #7e57c2;
        color: white;
        font-weight: 600;
        transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
        border-radius: 5px;
    }

        .btn-custom:hover {
            background-color: #9c80f0;
            border-color: #9c80f0;
            color: #2a0d6a; /* Màu chữ đậm nổi bật khi hover */
            transform: scale(1.1);
            z-index: 10;
            position: relative;
        }

    /* Nút sửa */
    .btn-custom-warning {
        background-color: #ffb74d;
        border-color: #ffb74d;
        color: #4e342e;
        font-weight: 600;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
    }

        .btn-custom-warning:hover {
            background-color: #ffcc80;
            border-color: #ffcc80;
            color: #663c00; /* Màu chữ đậm nổi bật khi hover */
            transform: scale(1.1);
            z-index: 10;
            position: relative;
        }

    /* Nút xóa */
    .btn-custom-danger {
        background-color: #e53935;
        border-color: #e53935;
        color: white;
        font-weight: 600;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
    }

        .btn-custom-danger:hover {
            background-color: #ef5350;
            border-color: #ef5350;
            color: #330000; /* Màu chữ đậm nổi bật khi hover */
            transform: scale(1.1);
            z-index: 10;
            position: relative;
        }

    .custom-table th,
    .custom-table td {
        font-weight: 700; /* In đậm tất cả chữ trong bảng */

    }
    /* Áp dụng xuống dòng chỉ cho cột Mô Tả (cột thứ 4) và Địa Chỉ (cột thứ 2) */
    .custom-table tbody tr td:nth-child(2),
    .custom-table tbody tr td:nth-child(4),
    .custom-table thead tr th:nth-child(2),
    .custom-table thead tr th:nth-child(4) {
        white-space: normal;
        word-wrap: break-word;
        word-break: break-word;
    }


</style>
