@model DACS_QuanLyPhongTro.Models.ToaNha

@{
    ViewData["Title"] = "Xóa Tòa Nhà";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<div class="container my-4" style="max-width: 600px;">
    <h2 class="text-highlight mb-4 text-center">@ViewData["Title"]</h2>

    <h4 class="text-center">Bạn có chắc muốn xóa tòa nhà này?</h4>

    <div class="border rounded p-3 mb-4 shadow-sm">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-bold">
                @Html.DisplayNameFor(model => model.TenToaNha)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.TenToaNha)
            </dd>

            <dt class="col-sm-4 fw-bold">
                Chủ trọ
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ChuTro.HoTen)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="MaToaNha" />
        <button type="submit" class="btn btn-danger btn-custom">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
    </form>
</div>
