@model DACS_QuanLyPhongTro.Models.ToaNha

@{
    ViewData["Title"] = "Xóa Tòa Nhà";
	Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<h2>Xóa Tòa Nhà</h2>

<h3>Bạn có chắc muốn xóa tòa nhà này?</h3>
<div>
    <h4>@Model.TenToaNha</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenToaNha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenToaNha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChuTro.HoTen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChuTro.HoTen)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaToaNha" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
    </form>
</div>