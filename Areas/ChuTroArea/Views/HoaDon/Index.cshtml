@model IEnumerable<DACS_QuanLyPhongTro.Models.HoaDon>

@{
    ViewData["Title"] = "Danh sách hóa đơn";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
    var vnd = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.ThongBao != null)
{
    <div class="alert alert-warning">
        @ViewBag.ThongBao
    </div>
}

@if (TempData["ThongBao"] != null)
{
    <div class="alert alert-info">
        @TempData["ThongBao"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã hóa đơn</th>
            <th>Ngày lập</th>
            <th>Khách thuê</th>
            <th>Phòng</th>
            <th>Tiền điện</th>
            <th>Tiền nước</th>
            <th>Tiền phòng</th>
            <th>Tiền dịch vụ</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hoaDon in Model)
        {
            <tr>
                <td>@hoaDon.MaHoaDon</td>
                <td>@hoaDon.NgayLap.ToString("dd/MM/yyyy")</td>
                <td>@hoaDon.KhachThue?.HoTen</td>
                <td>@hoaDon.ChiSoDienNuoc?.PhongTro?.SoPhong</td>
                <td>@hoaDon.TienDien.ToString("C2", vnd)</td>
                <td>@hoaDon.TienNuoc.ToString("C2", vnd)</td>
                <td>@hoaDon.TienPhong.ToString("C2", vnd)</td>
                <td>@hoaDon.TienDichVu.ToString("C2", vnd)</td>
                <td>@hoaDon.TongTien.ToString("C2", vnd)</td>
                <td>@hoaDon.TrangThai</td>
                <td>
                    <a href="@Url.Action("Details", "HoaDon", new { id = hoaDon.MaHoaDon })" class="btn btn-info btn-sm">Xem</a>

                    @if (hoaDon.TrangThai == "Chờ xác nhận")
                    {
                        <a href="@Url.Action("XacNhanThanhToan", "HoaDon", new { id = hoaDon.MaHoaDon })" class="btn btn-success btn-sm" onclick="return confirm('Bạn có chắc muốn xác nhận thanh toán hóa đơn này?');">Xác nhận</a>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a href="@Url.Action("Create", "HoaDon")" class="btn btn-primary">Tạo hóa đơn mới</a>
</div>
