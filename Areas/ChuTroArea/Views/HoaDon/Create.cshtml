@model DACS_QuanLyPhongTro.Models.HoaDon
@{
    ViewData["Title"] = "Tạo Hóa Đơn";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
}

<div class="content-header px-2 px-md-3 pt-1 pb-0">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h2 class="h4 mb-0">@ViewData["Title"]</h2>
        <div class="d-flex align-items-center gap-2">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay Lại
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center mt-3">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 hoadon-create-card">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar bg-gradient-primary text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 me-3" style="width:48px;height:48px;">
                        <i class="fas fa-file-invoice fs-4"></i>
                    </div>
                    <h5 class="card-title mb-0 fw-bold text-dark">Tạo Hóa Đơn Mới</h5>
                </div>
                <form asp-action="Create" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="MaPhong" class="form-label fw-bold">Phòng</label>
                        <select asp-for="MaPhong" class="form-select" asp-items="ViewBag.PhongTros">
                            <option value="">-- Chọn phòng trọ --</option>
                        </select>
                        <span asp-validation-for="MaPhong" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" class="btn btn-primary btn-sm px-5">Tạo hóa đơn</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-4">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    .hoadon-create-card {
        transition: transform .15s ease, box-shadow .15s ease;
        margin-bottom: 0;
        background-color: #f0fff4;
    }
    .hoadon-create-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }
    .avatar {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }
    .hoadon-create-card .card-title {
        font-size: 1.15rem;
        line-height: 1.3;
        color: #2c3e50;
    }
    .hoadon-create-card .btn {
        font-size: 0.95rem;
        font-weight: 500;
    }
    .hoadon-create-card .form-label {
        font-weight: 600;
    }
</style>
