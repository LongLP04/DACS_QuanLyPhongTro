@model IEnumerable<DACS_QuanLyPhongTro.Models.HoaDon>

@{
    ViewData["Title"] = "Danh sách hóa đơn";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
}

<h3>@ViewData["Title"]</h3>

<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Mã Hóa Đơn</th>
                    <th>Phòng</th>
                    <th>Ngày Lập</th>
                    <th>Tổng Tiền</th>
                    <th>Trạng Thái</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hoaDon in Model)
                {
                    <tr>
                        <td>@hoaDon.MaHoaDon</td>
                        <td>@hoaDon.PhongTro?.SoPhong</td>
                        <td>@hoaDon.NgayLap.ToString("dd/MM/yyyy")</td>
                        <td>@hoaDon.TongTien.ToString("N0") VND</td>
                        <td>@hoaDon.TrangThai</td>
                        <td>
                            @if (hoaDon.TrangThai == "Chờ xác nhận")
                            {
                                <a asp-action="XacNhanThanhToan" asp-route-id="@hoaDon.MaHoaDon" class="btn btn-primary"
                                   onclick="return confirm('Bạn có chắc muốn xác nhận thanh toán hóa đơn này?');">
                                    Xác nhận
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
