@model DACS_QuanLyPhongTro.Models.HoaDon
@{
    ViewData["Title"] = "Xác nhận thanh toán hóa đơn";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
    var vnd = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<div class="content-header px-2 px-md-3 pt-1 pb-0">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h2 class="h4 mb-0">@ViewData["Title"]</h2>
        <div class="d-flex align-items-center gap-2">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay Lại
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center mt-3">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 hoadon-xacnhan-card">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar bg-gradient-primary text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 me-3" style="width:48px;height:48px;">
                        <i class="fas fa-file-invoice-dollar fs-4"></i>
                    </div>
                    <h5 class="card-title mb-0 fw-bold text-dark">Xác nhận thanh toán hóa đơn</h5>
                </div>
                <div class="mb-2">
                    <span class="badge bg-primary-subtle text-primary border border-primary fs-6 px-2 py-1">
                        Mã hóa đơn: <strong>@Model.MaHoaDon</strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-info-subtle text-info border border-info fs-6 px-2 py-1">
                        Khách thuê: <strong>@Model.KhachThue?.HoTen</strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-success-subtle text-success border border-success fs-6 px-2 py-1">
                        Phòng: <strong>@Model.ChiSoDienNuoc?.PhongTro?.SoPhong</strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-danger-subtle text-danger border border-danger fs-6 px-2 py-1">
                        Tổng tiền: <strong>@Model.TongTien.ToString("N0", vnd) VNĐ</strong>
                    </span>
                </div>
                <div class="mb-2">
                    @if (Model.TrangThai == "Chờ xác nhận")
                    {
                        <span class="badge bg-warning text-dark px-2 py-1"><i class="fas fa-clock me-1"></i>@Model.TrangThai</span>
                    }
                    else if (Model.TrangThai == "Đã thanh toán")
                    {
                        <span class="badge bg-success text-white px-2 py-1"><i class="fas fa-check me-1"></i>@Model.TrangThai</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white px-2 py-1"><i class="fas fa-times me-1"></i>@Model.TrangThai</span>
                    }
                </div>
                <form asp-action="XacNhanThanhToan" method="post" class="d-flex gap-2 justify-content-end mt-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="MaHoaDon" />
                    <button type="submit" class="btn btn-outline-success btn-sm px-3">
                        <i class="fas fa-check me-1"></i>Xác nhận thanh toán
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">Hủy</a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .hoadon-xacnhan-card {
        transition: transform .15s ease, box-shadow .15s ease;
        margin-bottom: 0;
        background-color: #fff0f5;
    }
    .hoadon-xacnhan-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }
    .avatar {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }
    .hoadon-xacnhan-card .card-title {
        font-size: 1.15rem;
        line-height: 1.3;
        color: #2c3e50;
    }
    .hoadon-xacnhan-card .badge {
        font-size: 0.875rem;
        font-weight: 500;
        background-color: rgba(255, 255, 255, 0.8) !important;
        backdrop-filter: blur(10px);
    }
    .hoadon-xacnhan-card .btn {
        font-size: 0.95rem;
        font-weight: 500;
    }
</style>
