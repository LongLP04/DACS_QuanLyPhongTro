@model DACS_QuanLyPhongTro.Models.ChiSoDienNuoc
@{
    ViewData["Title"] = "Chi Tiết Chỉ Số Điện Nước";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
}

<div class="content-header px-2 px-md-3 pt-1 pb-0">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h2 class="h4 mb-0">@ViewData["Title"]</h2>
        <div class="d-flex align-items-center gap-2">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay Lại
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center mt-3">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 csdn-detail-card">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar bg-gradient-primary text-white rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 me-3" style="width:48px;height:48px;">
                        <i class="fas fa-bolt fs-4"></i>
                    </div>
                    <h5 class="card-title mb-0 fw-bold text-dark">Chi Tiết Chỉ Số Điện Nước</h5>
                </div>
                <div class="mb-2">
                    <span class="badge bg-primary-subtle text-primary border border-primary fs-6 px-2 py-1">
                        Phòng: <strong>@Model.PhongTro?.SoPhong</strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-info-subtle text-info border border-info fs-6 px-2 py-1">
                        Ngày ghi: <strong>@Model.NgayGhi.ToString("dd/MM/yyyy")</strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-warning-subtle text-warning border border-warning fs-6 px-2 py-1">
                        Điện cũ: <strong>@Model.ChiSoDienCu</strong> | Điện mới: <strong>@Model.ChiSoDienMoi</strong>
                    </span>
                    <span class="badge bg-primary-subtle text-primary border border-primary fs-6 px-2 py-1">
                        Điện tiêu thụ: <strong>@Model.SoDienTieuThu</strong> </strong>
                    </span>
                </div>
                <div class="mb-2">
                    <span class="badge bg-success-subtle text-success border border-success fs-6 px-2 py-1">
                        Nước cũ: <strong>@Model.ChiSoNuocCu</strong> | Nước mới: <strong>@Model.ChiSoNuocMoi</strong>
                    </span>
                    <span class="badge bg-primary-subtle text-primary border border-primary fs-6 px-2 py-1">
                        Nước tiêu thụ: <strong>@Model.SoNuocTieuThu</strong>
                    </span>
                </div>
                
                <div class="mb-2">
                    <span class="badge bg-warning-subtle text-warning border border-warning fs-6 px-2 py-1">
                        Đơn giá điện: <strong>@Model.DonGiaDien.ToString("N0") VNĐ</strong>
                    </span>
                    <span class="badge bg-success-subtle text-success border border-success fs-6 px-2 py-1">
                        Đơn giá nước: <strong>@Model.DonGiaNuoc.ToString("N0") VNĐ</strong>
                    </span>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0 pb-3 px-3">
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">Quay Lại</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .csdn-detail-card {
        transition: transform .15s ease, box-shadow .15s ease;
        margin-bottom: 0;
        background-color: #f0fff4;
    }
    .csdn-detail-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }
    .avatar {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }
    .csdn-detail-card .card-title {
        font-size: 1.15rem;
        line-height: 1.3;
        color: #2c3e50;
    }
    .csdn-detail-card .badge {
        font-size: 0.875rem;
        font-weight: 500;
        background-color: rgba(255, 255, 255, 0.8) !important;
        backdrop-filter: blur(10px);
    }
    .csdn-detail-card .btn {
        font-size: 0.95rem;
        font-weight: 500;
    }
</style>
