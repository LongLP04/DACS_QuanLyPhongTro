@model DACS_QuanLyPhongTro.Models.ChiSoDienNuoc
@{
    ViewData["Title"] = "Chi Tiết Chỉ Số Điện Nước";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2>Chi Tiết Chỉ Số Điện Nước</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Thông Tin Chỉ Số</h5>
            <p><strong>Phòng Trọ:</strong> @Model.PhongTro?.SoPhong</p>
            <p><strong>Ngày Ghi:</strong> @Model.NgayGhi.ToString("dd/MM/yyyy")</p>
            <p><strong>Chỉ Số Điện Cũ:</strong> @Model.ChiSoDienCu</p>
            <p><strong>Chỉ Số Điện Mới:</strong> @Model.ChiSoDienMoi</p>
            <p><strong>Số Điện Tiêu Thụ:</strong> @Model.SoDienTieuThu</p>
            <p><strong>Chỉ Số Nước Cũ:</strong> @Model.ChiSoNuocCu</p>
            <p><strong>Chỉ Số Nước Mới:</strong> @Model.ChiSoNuocMoi</p>
            <p><strong>Số Nước Tiêu Thụ:</strong> @Model.SoNuocTieuThu</p>
            <p><strong>Đơn Giá Điện:</strong> @Model.DonGiaDien.ToString("N0") VNĐ</p>
            <p><strong>Đơn Giá Nước:</strong> @Model.DonGiaNuoc.ToString("N0") VNĐ</p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
    </div>
</div>