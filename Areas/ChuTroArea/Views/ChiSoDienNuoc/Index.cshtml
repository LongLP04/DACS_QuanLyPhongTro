@model List<DACS_QuanLyPhongTro.Models.ChiSoDienNuoc>

@{
    ViewData["Title"] = "Danh Sách Chỉ Số Điện Nước";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdminLTE.cshtml";
}

<div class="container mt-5" style="max-width: 1100px;">
    <h2 class="mb-4 text-highlight text-center">@ViewData["Title"]</h2>

    @if (TempData["ThongBao"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["ThongBao"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="text-center mb-3">
        <a asp-action="Create" class="btn btn-primary btn-custom btn-zoom px-4">Ghi Chỉ Số Điện Nước</a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table id="csdnTable" class="table table-striped table-bordered custom-table">
            <thead class="thead-custom text-white">
                <tr>
                    <th>Phòng</th>
                    <th>Ngày Ghi</th>
                    <th>Số Điện Tiêu Thụ</th>
                    <th>Số Nước Tiêu Thụ</th>
                    <th>Đơn Giá Điện</th>
                    <th>Đơn Giá Nước</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var chiSo in Model)
                {
                    <tr>
                        <td class="fw-bold">@chiSo.PhongTro?.SoPhong</td>
                        <td>@chiSo.NgayGhi.ToString("dd/MM/yyyy")</td>
                        <td>@chiSo.SoDienTieuThu</td>
                        <td>@chiSo.SoNuocTieuThu</td>
                        <td>@chiSo.DonGiaDien.ToString("N0") VNĐ</td>
                        <td>@chiSo.DonGiaNuoc.ToString("N0") VNĐ</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@chiSo.MaChiSo" class="btn btn-info btn-sm btn-custom btn-zoom me-1">Xem</a>
                            <a asp-action="Edit" asp-route-id="@chiSo.MaChiSo" class="btn btn-warning btn-sm btn-custom-warning btn-zoom me-1">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@chiSo.MaChiSo" class="btn btn-danger btn-sm btn-custom-danger btn-zoom">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .text-highlight {
        font-weight: 700;
        font-size: 2.5rem;
        background: linear-gradient(90deg, #ff8a00, #e52e71);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.3);
    }
    .btn-custom {
        font-weight: 600;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-custom.btn-zoom:hover {
            transform: scale(1.1);
            position: relative;
            z-index: 10;
        }

    .btn-custom-warning {
        background-color: #ffb74d !important;
        border-color: #ffb74d !important;
        color: #4e342e !important;
    }

        .btn-custom-warning:hover {
            background-color: #ffcc80 !important;
            border-color: #ffcc80 !important;
            color: #663c00 !important;
        }

    .btn-custom-danger {
        background-color: #e53935 !important;
        border-color: #e53935 !important;
        color: white !important;
    }

        .btn-custom-danger:hover {
            background-color: #ef5350 !important;
            border-color: #ef5350 !important;
            color: #330000 !important;
        }

    .thead-custom {
        background-color: #5a2ea6;
    }

    .custom-table tbody tr:hover {
        background-color: #d9caff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .custom-table tbody tr:hover td:hover {
            background-color: #a884f7 !important;
            color: #3e2d5e;
            font-weight: 600;
        }
</style>
@section Scripts {
    <script>
        $(function () {
            $('#csdnTable').DataTable({
                pageLength: 10,
                lengthChange: false,
                order: [],
                language: { url: 'https://cdn.datatables.net/plug-ins/1.13.5/i18n/vi.json' }
            });
        });
    </script>
}
