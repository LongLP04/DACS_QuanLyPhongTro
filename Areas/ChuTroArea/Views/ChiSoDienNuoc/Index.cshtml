@model List<DACS_QuanLyPhongTro.Models.ChiSoDienNuoc>
@{
    ViewData["Title"] = "Danh Sách Chỉ Số Điện Nước";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Danh Sách Chỉ Số Điện Nước</h2>

    @if (TempData["ThongBao"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["ThongBao"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary">Ghi Chỉ Số Điện Nước</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Phòng</th>
                <th>Ngày Ghi</th>
                <th>Số Điện Tiêu Thụ</th>
                <th>Số Nước Tiêu Thụ</th>
                <th>Đơn Giá Điện</th>
                <th>Đơn Giá Nước</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chiSo in Model)
            {
                <tr>
                    <td>@chiSo.PhongTro?.SoPhong</td>
                    <td>@chiSo.NgayGhi.ToString("dd/MM/yyyy")</td>
                    <td>@chiSo.SoDienTieuThu</td>
                    <td>@chiSo.SoNuocTieuThu</td>
                    <td>@chiSo.DonGiaDien.ToString("N0") VNĐ</td>
                    <td>@chiSo.DonGiaNuoc.ToString("N0") VNĐ</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@chiSo.MaChiSo" class="btn btn-info btn-sm">Xem</a>
						<a asp-action="Edit" asp-route-id="@chiSo.MaChiSo" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@chiSo.MaChiSo" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.alert').alert();
        });
    </script>
}