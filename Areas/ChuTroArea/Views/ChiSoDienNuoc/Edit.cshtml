@model DACS_QuanLyPhongTro.Models.ChiSoDienNuoc

@{
    ViewData["Title"] = "Chỉnh sửa chỉ số điện nước";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="mb-4 text-primary text-center">@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaChiSo" />

        <div class="mb-3">
            <label asp-for="MaPhong" class="form-label">Phòng Trọ</label>
            <select asp-for="MaPhong" class="form-select" asp-items="ViewBag.PhongTros" required></select>
            <span asp-validation-for="MaPhong" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ChiSoDienCu" class="form-label">Chỉ Số Điện Cũ</label>
            <input asp-for="ChiSoDienCu" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="ChiSoDienCu" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ChiSoDienMoi" class="form-label">Chỉ Số Điện Mới</label>
            <input asp-for="ChiSoDienMoi" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="ChiSoDienMoi" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ChiSoNuocCu" class="form-label">Chỉ Số Nước Cũ</label>
            <input asp-for="ChiSoNuocCu" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="ChiSoNuocCu" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ChiSoNuocMoi" class="form-label">Chỉ Số Nước Mới</label>
            <input asp-for="ChiSoNuocMoi" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="ChiSoNuocMoi" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DonGiaDien" class="form-label">Đơn Giá Điện (VNĐ)</label>
            <input asp-for="DonGiaDien" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="DonGiaDien" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DonGiaNuoc" class="form-label">Đơn Giá Nước (VNĐ)</label>
            <input asp-for="DonGiaNuoc" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="DonGiaNuoc" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <input type="submit" value="Cập nhật" class="btn btn-primary btn-custom btn-zoom px-4" />
            <a asp-action="Index" class="btn btn-secondary btn-custom btn-zoom px-4">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
