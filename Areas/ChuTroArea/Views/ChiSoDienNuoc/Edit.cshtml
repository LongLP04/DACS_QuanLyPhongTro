@model DACS_QuanLyPhongTro.Models.ChiSoDienNuoc

@{
    ViewData["Title"] = "Chỉnh sửa chỉ số điện nước";
    Layout = "~/Areas/ChuTroArea/Views/Shared/layoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2>Chỉnh sửa chỉ số điện nước</h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaChiSo" />

        <div class="form-group">
            <label asp-for="MaPhong" class="control-label">Phòng Trọ</label>
            <select asp-for="MaPhong" class="form-control" asp-items="ViewBag.PhongTros" required></select>
            <span asp-validation-for="MaPhong" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ChiSoDienCu" class="control-label">Chỉ Số Điện Cũ</label>
            <input asp-for="ChiSoDienCu" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="ChiSoDienCu" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ChiSoDienMoi" class="control-label">Chỉ Số Điện Mới</label>
            <input asp-for="ChiSoDienMoi" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="ChiSoDienMoi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ChiSoNuocCu" class="control-label">Chỉ Số Nước Cũ</label>
            <input asp-for="ChiSoNuocCu" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="ChiSoNuocCu" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ChiSoNuocMoi" class="control-label">Chỉ Số Nước Mới</label>
            <input asp-for="ChiSoNuocMoi" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="ChiSoNuocMoi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DonGiaDien" class="control-label">Đơn Giá Điện (VNĐ)</label>
            <input asp-for="DonGiaDien" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="DonGiaDien" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DonGiaNuoc" class="control-label">Đơn Giá Nước (VNĐ)</label>
            <input asp-for="DonGiaNuoc" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="DonGiaNuoc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Cập nhật" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
