@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .form-label {
        font-weight: 500;
        margin-bottom: 4px;
    }

    .form-control, .form-select {
        height: 42px;
        padding: 6px 12px;
        font-size: 1rem;
    }

    .btn-custom {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-custom:hover {
            background-color: #0056b3 !important;
            transform: scale(1.02);
        }

    .btn-outline-secondary:hover {
        background-color: #f8f9fa;
        transform: scale(1.02);
    }

    .form-group {
        margin-bottom: 1rem;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-4 rounded-4">
                <h2 class="text-center mb-4">Đăng ký tài khoản</h2>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <label asp-for="Input.HoTen">Họ tên</label>
                        <input asp-for="Input.HoTen" class="form-control" placeholder="Họ tên" />
                        <span asp-validation-for="Input.HoTen" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <label asp-for="Input.Gioitinh">Giới tính</label>
                        <select asp-for="Input.Gioitinh" class="form-select">
                            <option value="">-- Chọn giới tính --</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                            <option value="Khác">Khác</option>
                        </select>
                        <span asp-validation-for="Input.Gioitinh" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <label asp-for="Input.CCCD">CCCD</label>
                        <input asp-for="Input.CCCD" class="form-control" placeholder="CCCD" />
                        <span asp-validation-for="Input.CCCD" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <label asp-for="Input.SoDienThoai">Số điện thoại</label>
                        <input asp-for="Input.SoDienThoai" class="form-control" placeholder="Số điện thoại" />
                        <span asp-validation-for="Input.SoDienThoai" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <label asp-for="Input.Email">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <label asp-for="Input.Password">Mật khẩu</label>
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="Mật khẩu" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Xác nhận mật khẩu" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <label asp-for="Input.Role">Vai trò</label>
                        <select asp-for="Input.Role" asp-items="Model.Input.RoleList" class="form-select">
                            <option value="">Chọn vai trò</option>
                        </select>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-custom w-100">Đăng ký</button>
                </form>

                @if (Model.ExternalLogins?.Count > 0)
                {
                    <hr />
                    <div class="text-center mb-2">Hoặc đăng ký bằng</div>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-flex justify-content-between">
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" class="btn btn-outline-secondary w-100 me-2" name="provider" value="@provider.Name">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
