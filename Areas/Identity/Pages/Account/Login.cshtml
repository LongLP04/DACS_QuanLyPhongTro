@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<style>
    .form-label {
        font-weight: 500;
        margin-bottom: 4px;
    }

    .form-control {
        height: 42px;
        padding: 6px 12px;
        font-size: 1rem;
    }

    .btn-custom {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-custom:hover {
            background-color: #0056b3 !important;
            transform: scale(1.02);
        }

    .btn-outline-secondary:hover {
        background-color: #f8f9fa;
        transform: scale(1.02);
    }

    .card {
        border-radius: 1rem;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Đăng nhập</h2>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                        <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Mật khẩu" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary btn-custom w-100">Đăng nhập</button>

                    <div class="text-center mt-3">
                        <a asp-page="./ForgotPassword">Quên mật khẩu?</a>
                    </div>
                    <div class="text-center mt-2">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Chưa có tài khoản? Đăng ký</a>
                    </div>
                    <div class="text-center mt-2">
                        <a asp-page="./ResendEmailConfirmation">Gửi lại email xác nhận</a>
                    </div>
                </form>

                @if (Model.ExternalLogins?.Count > 0)
                {
                    <hr />
                    <div class="text-center mb-2">Hoặc đăng nhập bằng</div>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-flex justify-content-between flex-wrap gap-2">
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" class="btn btn-outline-secondary w-100" name="provider" value="@provider.Name" title="Log in using @provider.DisplayName">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }
                else
                {
                    
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
